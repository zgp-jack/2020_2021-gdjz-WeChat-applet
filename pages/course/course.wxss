/* pages/course/course.wxss */
.common-choose-header{
    position: relative;
    padding: 15rpx 27rpx;
}
.choose-headerbox{
    position: relative;
    background: white;
    height: 100rpx;
    line-height: 100rpx;
    border-radius: 2px;
    padding: 20rpx 0;
}
.choose-header-item{
    flex: 1;
    border-right: 1px solid #dcdcdc;
    text-align: center;
}
.choose-header-item view{
    position: relative;
    font-size: 30rpx;
    padding-left: 40rpx;
    display: inline-block;
    height: 60rpx;
    width: inherit;
    line-height: 60rpx;
    text-align: center;
    color: #6c6d6d;
}
.choose-header-item:nth-last-child(1){
    border-right: 0;
}
.choose-header-item view image{
    position: absolute;
    display: block;
    width: 30rpx;
    height: 30rpx;
    top: 15rpx;
    left: 0;
}

.course-body{
    position: relative;
    padding:0 27rpx;
}
.course-contentbox{
    position: relative;
    background: white;
    padding: 10rpx;
}
.course-content-item{
    position: relative;
    width: 100%;
    padding: 20rpx;
    border-bottom: 1px solid #dcdcdc;
}
.course-content-item:nth-last-child(1){
    border-bottom: 0;
}
