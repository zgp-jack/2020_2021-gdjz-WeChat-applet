.recharge-content{
    position: relative;
    padding: 15rpx 27rpx 0;
}
.recharge-header{
    background: white;
    padding: 20rpx;
}
.recharge-header view{
    font-size: 28rpx;
    display: block;
    line-height: 50rpx;
}
.recharge-header view text{
    color: #0099ff;
}
.recharge-body{
    margin-top: 15rpx;
    background: white;
    padding: 10rpx;
}
.recharge-choose-tips{
    position: relative;
    display: block;
    line-height: 60rpx;
    font-size: 28rpx;
    padding-left: 10rpx;
}
.recharge-choose-box{
    position: relative;
}
.recharge-choose-item{
    position: relative;
    width: 33.3333%;
    float: left;
    padding: 10rpx;
}
.recharge-choose-item view{
    position: relative;
    width: 100%;
    height:120rpx;
    border: 1px solid #f4f4f4;
    border-radius: 3px;
    padding: 10rpx;
    overflow: hidden;
}
.recharge-choose-item view text{
    display: block;
    text-align: center;
    line-height: 50rpx;
    font-size: 28rpx;
}
.recharge-choose-item view text:nth-child(2){
    color: #adadad;
}
.recharge-choose-item view.recharge-item-active{
    background: #0099ff;
}
.recharge-choose-item view.recharge-item-active::after{
    position: absolute;
    content: '';
    width: 38rpx;
    height: 38rpx;
    right: 0;
    bottom: 0;
}
.recharge-choose-item view.recharge-item-active text{
    color: #fff;
}
.recharge-sure{
    position: relative;
    width: 80%;
    height: 80rpx;
    line-height: 80rpx;
    background: #0099ff;
    display: block;
    color: #fff;
    text-align: center;
    margin: 50rpx auto 0;
    border-radius: 3px;
}