@import "../code/code.wxss";

page{
  background: #f7f6f7;
}
.issue-area-container{
  position: relative;
}

.issue-area-tips{
  position: relative;
  margin-top: 35rpx;
  width: 100%;
  line-height: 80rpx;
  font-size: 28rpx;
}
.issue-contactbox{
  padding: 30rpx;
}
.issue-box{
  position: relative;
  display: flex;
  align-items: center;
  background: white;
  padding: 0rpx 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  border-radius: 10rpx;
}
.issue-input{
  position: relative;
  display: inline-block;
  border-radius: 5rpx;
  height: 100rpx;
  line-height: 75rpx;
  background-color: white;
  padding: 0 20rpx;
  font-size: 30rpx;
  margin-left: 20rpx;
}
.issue-area-triangle{
  position: absolute;
  width: 0; 
  height: 0;
  right: 20rpx;
  top: 30rpx;
  border-width: 12rpx;
  border-style: solid;
  border-color:#111 transparent transparent  transparent;
}

.issue-tip{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: relative;
  text-align: center;
  font-weight: bold;
  font-size: 30rpx;
  color: #333;
  line-height: 100rpx;
  background: white;
}
.issue-tip-image {
  display: inline-block;
  width:30rpx
}
.issue-contact-title{
  margin: 0rpx 10rpx;
}