@import "../code/code.wxss";

page{
  background: #f7f6f7;
}
.issue-area-container{
  position: relative;
}

.issue-area-tips{
  position: relative;
  margin-top: 35rpx;
  width: 100%;
  line-height: 80rpx;
  font-size: 28rpx;
}
.issue-contactbox{
  padding: 30rpx;
}
.issue-box{
  position: relative;
  display: flex;
  align-items: center;
  background: white;
  padding: 0rpx 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  border-radius: 10rpx;
}
.issue-input{
  position: relative;
  display: inline-block;
  border-radius: 5rpx;
  height: 100rpx;
  line-height: 75rpx;
  background-color: white;
  padding: 0 20rpx;
  font-size: 30rpx;
  margin-left: 20rpx;
}

.issue-tip{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: relative;
  text-align: center;
  font-weight: bold;
  font-size: 30rpx;
  color: #333;
  line-height: 100rpx;
  background: white;
}
.issue-tip-image {
  display: inline-block;
  width:30rpx
}
.issue-contact-title{
  margin: 0rpx 10rpx;
}
.issue-form-upload{
  background: white;
  border-radius: 10rpx;
}

.issue-form-switch{
  position:relative;
  display: flex;
  align-items: center;
  height: 100rpx;
  font-size: 28rpx;
  padding: 0rpx 20rpx;
}
.issue-upload-switch{
  position: absolute;
  right: 20rpx;
  zoom: 0.7;
}
.issue-upload-tips{
  position: relative;
  font-size: 28rpx;
  color: #9b9b9b;
  line-height: 100rpx;
  padding: 0rpx 20rpx;
}
.issue-upload-tips::before{
  position: absolute;
  content: '';
  width: 95%;
  height: 1rpx;
  background: #eeee;
  top: 0rpx;
}
.issue-upload-show{
  padding: 40rpx 20rpx 80rpx;
}
.issue-upload-item{
  width: 190rpx;
  height: 190rpx;
}
.imgitem-box{
  width: 100%;
  height: 100%;
}
.imgitem-box image{
  width: 100%;
  height: 100%;
}
