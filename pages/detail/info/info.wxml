<!-- locatext -->
<view style='height:100%;{{ showComplain ? "overflow:hidden;" : "" }}'>

	<view class="yupao-common-container" style="{{ userInfo.userId == info.user_id ? 'padding-bottom:20rpx':'padding-bottom:130rpx' }}">

		<view class='info-yupao-tips'>
			<view class='yupao-lists-notice'>
				<view class='yupao-lists-wxinfo'>
					<view class='yupao-lists-wxtips'>
						<text  wx:for="{{joingroup}}" wx:key="{{ index }}" style="color:{{item.color}}"      data-wechat="{{ item.text== 'wechat_number'|| item.action.type == 'copy' ?wechat:'' }}" bindtap="{{item.action.type == 'replace'?'clipboardWechat':((item.action.type == 'copy'?'clipboardWechat':(item.action.type == 'call'?'callThisPhone':''))) }}" data-phone="{{ item.action.type == 'call'?phone:'' }}"  class="{{item.action.is_btn == '1'?'phoneer':'' }}" >{{item.text== 'wechat_number'?wechat:item.text}}</text>
					</view>
				</view>
			</view>
		</view>

		<view class="matter">

			<view class="cephalosomea">

				<view class="linkman">
					<view class="linkmana">{{ info.title }}</view>
					<view class="linkmanb">发布时间：{{ info.time }}</view>

					<!-- 新代码 -->
					<view class="newdetail-recruitinfo">
						<view class="recruit-publisherinfo">
							<image class="recruit-publisher-img" src="{{ info.image }}"></image>
							<view class="publisher-username">{{ info.user_name }}</view>
							<view class="publisher-phone">{{ info.tel_str }}</view>
							<view class="newdetail-callbox" wx:if="{{ userInfo.userId != info.user_id }}">
								<view class="newdetail-call-show" wx:if="{{ info.show_ajax_btn }}" bindtap='getInfoTel'>查看完整电话</view>
								<view class="newdetail-call-report" bindtap='userTapComplain' wx:if="{{ (info.isLook == 1)&&info.is_end == '2'}}">投诉</view>
								<view class="newdetail-call-end" wx:if="{{ info.is_end == '2' }}">已招到</view>
								<block wx:if="{{ !info.show_ajax_btn && (info.is_end == '1') }}">
									<view class="newdetail-call-tell" bindtap='callThisPhone' data-phone="{{ info.tel_str }}">点击拨打</view>
									<view class="newdetail-call-report" bindtap='userTapComplain'>投诉</view>
								</block>
							</view>
						</view>
						<view class="newdetail-recruitfooter">
							<view class="newdetail-recruitfooter-tips">联系我时请说明是在“<text>鱼泡网</text>”上看到的</view>
						</view>
					</view>


				</view>
			</view>

			<view class="cephalosomebox">

				<view class="craft">项目描述：</view>
				<view class="genre">
					<view class="jiaznu" wx:for="{{ info.classifyName }}" wx:key="{{ index }}">{{ item }}</view>
				</view>
				<view class="craftas">{{ info.detail }}</view>

				<view class='ucard-imgsbox clearfix' wx:if="{{ info.view_images.length }}">
					<view class='ucard-imgs-item' wx:for="{{ info.view_images }}" wx:key="{{ index }}">
						<image src='{{ item }}' bindtap='previewImage' data-src="{{ item }}"></image>
					</view>
				</view>
				<view class="ephalos">

					<view class="locatext" wx:if="{{ !info.location }}">项目地址：
						<text class="locdez">{{ info.show_full_address }}</text>
					</view>

					<view class="locatext" wx:if="{{ info.location }}">
						<view class="register">
							<text>项目地址：</text>
							<view class="gister" bindtap="showThisMapInfo">
								<image class="maps" src="{{ mapimg }}"></image>
								<text class="maptexr">查看地图</text>
							</view>
						</view>
						<view class="locdez">{{ info.show_full_address }}</view>
					</view>

				</view>
			</view>


			<view class='info-wenxintips clearfix'>
				<view class='wenxintips-words'>
					<navigator url='/pages/anti-fraud/anti-fraud' open-type="navigate" class='text-nav-name text-active'>《防骗指南》</navigator>
					<view class='wenxintips-info'>：此信息由鱼泡网用户提供，但联系时仍需注意识别
						信息真伪。</view>
				</view>
				<view class='wenxintips-info'>关注 “鱼泡网” 微信公众号接收新工作提醒
					<text class='text-active' bindtap='userTapConcern'>如何关注</text>。</view>
			</view>

			<view class='info-concern-img'>
				<navigator url='/pages/download/download-app' open-type="navigate">
					<image mode='widthFix' src='{{ appLinkImg }}'></image>
				</navigator>
			</view>


      <!-- 相关推荐 -->
      <view class="recommend-info-container">
        <view class="recommend-info-header flex-row">
          <text>相关推荐</text>
        </view>
        <view class="recommend-info-body">


					<view class='gainebox'>
						<block  wx:for="{{ recommendlist }}" wx:key="{{ index }}" wx:if="{{ recommendlist.length }}">

						<view class="indxlistitem" bindtap="detailinfoaction"  data-id="{{ item.id }}" data-type="job" >

								<image  wx:if="{{ (item.top == '1') }}" class="ingsasea" src="{{bring}}" mode="widthFix"></image>
								<image  wx:if="{{ (item.is_end == '2') }}" class="imgseek" src="{{doneimg}}"></image>
								<!-- 上 -->
								<view class='toplist'>
									<view class="yupao-boxs">
										<view class="yupaoboxsfot">
											<view class="yupaotile">{{ item.title }}</view>
											<view  wx:if="{{ (item.top == '1') }}"  catchtap='wantFastIssue' class="yupao-conemtes">我要置顶</view>
										</view>
									</view>
									<view class='yupao-lists-wxtipse'>
										<view class="yupao-liststou">
											<image class="yupao-lists-img" src="{{ item.image }}"></image>
										</view>
										<view class="yupao-listsname">
											<view class="yupao-listswxyus">
												<text style="color:black">{{ item.user_name }}</text>
												<!-- <image class="sjim" src="{{autimg}}" mode="widthFix"></image> -->
												<image wx:if="{{ item.is_end == '1' }}" class="sjim" src="{{hirimg}}" ></image>
											</view>
											<view class="yupaolistswxyu">{{ item.detail }}</view>
										</view>
									</view>
								</view>
								<!-- 下 -->
								<view class='bottomlist'>
									<view class="bottomcomet">
										<view class="boomcom">
											<image class="imgheas" src="{{iondzs}}"></image>
											<text class="cometstexre">{{ item.show_address }}</text>
										</view>
										<view class="cometime">{{ item.time }}</view>
									</view>
								</view>
						</view>

						<ad  class="lists-ad" unit-id="{{ unitid }}"  wx:if="{{index % 5 == 0 && index > 5}}"></ad>
						<navigator url='/pages/download/download-app' wx:if="{{ (index == 5) && (fillterType[worktype].id != '55')}}" class='lists-ad lists-ad-image'>
								<image  src="{{ appLinkImg }}"></image>
						</navigator>
						<navigator class='lists-ad lists-ad-image' target="miniProgram"  wx:if="{{ (index == 5) && (fillterType[worktype].id == '55')}}" open-type="navigate" app-id="wx0ae31bf0edad4390" path="" extra-data="" version="release" >
								<image  src="{{ jixieLinkImg }}"></image>
						</navigator>

						</block>

						<view class='nodata-texttips' wx:if="{{ !recommendlist.length }}">没有更多内容了</view>
						<view class="seemore-recommend-recruit" bindtap="seemoreaction" wx:if="{{ recommendlist.length }}">查看更多招工信息</view>
				</view>


        </view>
      </view>


		</view>




	</view>


	<view class='info-needusershare flex-row' wx:if="{{ isShare }}">
		<view class='usershare-box'>
			<view class='usershare-header'>温馨提示</view>
			<view class='usershare-body'>{{ shareMsg }}</view>
			<view class='usershare-footer'>
				<button open-type="share">立即分享</button>
			</view>
		</view>
	</view>

	<view class='yupao-common-enterbox flex-row' wx:if="{{ showComplain }}">
		<view class='yupao-common-enter'>
			<text class='yupao-enter-title'>投诉信息</text>
			<text class='yupao-enter-tips'>请输入投诉内容</text>
			<view class='yupao-enter-body'>
				<textarea class='yupao-enter-wrap yupao-enter-textarea' placeholder='{{complaincontent}}' bindinput='userEnterComplain' maxlength='200' value='{{ complainInfo }}'></textarea>
			</view>
			<view class='yupao-enter-footer clearfix'>
				<text bindtap='userCancleComplain'>取消</text>
				<text bindtap='userComplaintAction'>确定</text>
			</view>
		</view>
	</view>

</view>


<view class="newdetail-info-footer" wx:if="{{ userInfo.userId != info.user_id }}">
	<view class="newdetail-info-itembox clearfix">
		<view class="newdetail-info-item" bindtap='userCollectAction'>
			<image src="{{ collectMark ? collectedImg : collectImg }}"></image>
			<text wx:if="{{ !collectMark }}">收藏</text>
			<text style="color:#0099ff;" wx:if="{{ collectMark}}">已收藏</text>
		</view>
		<view class="newdetail-info-item" bindtap="userTapComplain">
			<image src="{{ complainImg }}"></image>
			<text>投诉</text>
		</view>
		<button class="newdetail-info-item" open-type="share">
			<image src="{{ sharebtnImg }}"></image>
			<text>分享</text>
		</button>
	</view>
	<view class="callthisphone-btn" wx:if="{{ info.show_ajax_btn }}" bindtap='getInfoTel'>查看完整电话</view>
	<view class="callthisphone-btn" wx:if="{{ !info.show_ajax_btn && (info.is_end == '1') }}" bindtap='callThisPhone' data-phone="{{ info.tel_str }}">拨打电话</view>
	<view class="callthisphone-btn" wx:if="{{ info.is_end == '2' }}">{{ info.is_end_word }}</view>
</view>

<view class='fixed-get-integral fixed-get-integral-bottom' bindtap='detailToHome' wx:if="{{ showHomeImg }}">
	<image src='{{ homebtnImg }}'></image>
</view>

<!-- 新改动 拨号弹窗 -->
