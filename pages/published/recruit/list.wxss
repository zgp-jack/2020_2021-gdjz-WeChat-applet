.recruit-list-header{
  position: fixed;
  width: 100%;
  background: white;
  left: 0;
  top: 0;
  z-index: 10;
  box-shadow: 0 0 10rpx #dcdcdc;
}
.recruit-header-item{
  position: relative;
  flex: 1;
  color: #353535;
  font-size: 30rpx;
  text-align: center;
}
.recruit-header-text{
  position: relative;
  display: inline-block;
  line-height: 90rpx;
}
.recruit-header-text-active{
  color: #0099ff;
}
.recruit-header-text-active::after{
  position: absolute;
  width: 100%;
  left: 0;
  bottom: -2rpx;
  height: 4rpx;
  content: '';
  background: #0099ff;
}
.recruit-list-container{
  position: relative;
  padding-top: 100rpx;
  padding-bottom: 120rpx;
  padding-bottom: 120rpx;
}
.recruit-list-item{
  position: relative;
  padding: 20rpx 20rpx 0;
  margin-bottom: 20rpx;
  background: white;
  box-shadow: 0 0 10rpx #dcdcdc;
}
.recruit-list-endimg{
  position: absolute;
  right: 0;
  top: -7rpx;
  width: 100rpx;
  height: 40rpx;
  z-index: 2;
}
.recruit-item-title{
  position: relative;
  line-height: 60rpx;
  font-size: 30rpx;
  font-weight: bold;
  width: 85%;
}
.recruit-item-content{
  position: relative;
  line-height: 50rpx;
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
.recruit-item-footerbox{
  position: relative;
  width: 100%;
}
.recruit-item-footer{
  position: relative;
  width: 100%;
  margin-top: 10rpx;
  padding: 20rpx 0;
  border-top: 1px dashed #dcdcdc;
  justify-items: start;
  justify-content: space-between;
}
.recruit-footer-item{
  display: inline-block;
  border: 1px solid #dcdcdc;
  font-size: 30rpx;
  color: #333;
  padding: 8rpx 10rpx;
  text-align: center;
  width: 160rpx;
}
.recruit-footer-item.btn-visib{
  visibility: hidden;
}
.recruit-settop-time{
  position: relative;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #333;
}
.recruit-settop-time text{
  color: #777;
}
.recruit-settop-btn{
  background: #F5F5F5;
  color: #F12424;
  font-size: 30rpx;
  position: absolute;
  right: 0;
  bottom: 10rpx;
  display: inline-block;
  line-height: 50rpx;
  padding: 0 10rpx;
  width: 160rpx;
  border: 1px solid #F5F5F5;
  text-align: center;
}
.recruit-checking{
  line-height: 80rpx;
  color: #ff0000;
  font-size: 28rpx;
  border-top: 1px dashed #dcdcdc;
  margin-top: 15rpx;
  padding-left: 50rpx;
}

.recruit-checking image{
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  position: absolute;
  top: 27rpx;
  left: 0;
}


.collect-warp {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 50;
  background: rgba(0, 0, 0, 0.2);
  left: 0;
  top: 0;
}

.collectbox-tips {
  position: fixed;
  width: 90%;
  top: 50%;
  margin-top: -380rpx;
  left: 5%;
  background: white;
  border-radius: 12px;
}

.collect-tips-icon {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  left: 50%;
  margin-left: -50rpx;
  top: -50rpx;
  z-index: 10;
}

.collect-bg {
  position: relative;
  width: 100%;
  height: 300rpx;
  background: url("http://cdn.yupao.com/miniprogram/images/collect-tipbg.png") no-repeat;
  background-size: 100% 100%;
  padding: 60rpx 20rpx 0;
}

.collect-tips-title {
  position: relative;
  text-align: center;
  display: inline-block;
  font-size: 36rpx;
  line-height: 60rpx;
  color: white;
  width: 100%;
  margin-bottom: 10rpx;
}

.collect-tips-words {
  position: relative;
  display: inline-block;
  font-size: 30rpx;
  color: white;
  text-align: center;
  line-height: 50rpx;
  width: 100%;
}

.collect-tips-hand {
  position: relative;
  display: block;
  margin: 80rpx auto;
  width: 600rpx;
  height: 200rpx;
}


.knowtips {
  position: absolute;
  bottom: -45rpx;
  width: 350rpx;
  line-height: 90rpx;
  background: #09f;
  color: white;
  text-align: center;
  font-size: 30rpx;
  left: 50%;
  margin-left: -175rpx;
  border-radius: 20px;
}
