<view class="recruit-list-header flex-row">
  <view class="recruit-header-item" wx:for="{{ types }}" wx:key="{{ index }}" bindtap="userChangeType" data-key="{{ index }}"> 
    <view class="recruit-header-text {{ current===index ? 'recruit-header-text-active' : '' }}">{{ item.name }}</view>
  </view>
</view>

<view class="recruit-list-container">

  <view class="recruit-list-item" wx:for="{{ lists }}" wx:key="{{ index }}" data-id="{{ item.id }}" bindtap="jumpRecruitInfo">
    <image class="recruit-list-endimg" src="{{ statusCheck }}" wx:if="{{ item.is_check == '1' }}"></image>
    <image class="recruit-list-endimg" src="{{ statusNopass }}" wx:if="{{ item.is_check == '0' }}"></image>
    <image class="recruit-list-endimg" src="{{ statusEnd }}" wx:if="{{ item.is_end == '2' }}"></image>
    <view class="recruit-item-title overwords">{{ item.title }}</view>
    <view class="recruit-item-content">{{ item.detail }}</view>
    <view class="recruit-item-footerbox">
      <view class="recruit-checking" wx:if="{{ item.is_check == '1'  }}"> <image src="{{ checkingimg }}"></image> 提示：人工审核中，该信息仅自己可见。</view>
      <view class="recruit-item-footer flex-row" wx:if="{{ item.is_check != '1'  }}">
        <view class="recruit-footer-item" data-id="{{ item.id }}" bindtap="userEditRecuritInfo">修改</view>
        <block wx:if="{{ item.is_check == '2'  }}">
          <view class="recruit-footer-item" bindtap="changeRecruitStatus" data-id="{{ item.id }}" data-index="{{ index }}" data-status="{{ item.is_end }}">{{ item.is_end == '2' ? '重新招工' : '停止招工' }}</view>
          <view class="recruit-footer-item {{ item.is_end == '2' ? 'btn-visib' : '' }} " bindtap="userSetTopAction" data-id="{{ item.id }}" data-index="{{ index }}">{{ item.top && item.top_data.is_top == '1' ? '取消置顶' : '我要置顶' }}</view>
        </block>
      </view>
      <view class="recruit-settop-time" wx:if="{{ item.top_data.is_top == '1' && item.is_check == '2' }}">到期时间：<text>{{ item.top_data.time_str }}</text> <view class="recruit-settop-btn" bindtap="userSetTop" data-topId="1" data-id="{{ item.id }}" data-time="{{ item.sort_time }}">修改置顶</view> </view>
    </view>
  </view>
  <view class='nodata-texttips' wx:if="{{ !hasmore && page != 1 }}">没有更多内容了</view>
  <view class='common-nodatabox flex-column lists-nodata'  wx:if="{{ page === 1 && !hasmore }}">
      <image src='{{ nodata }}'></image>
      <text>暂无相关内容</text>
  </view>
</view>