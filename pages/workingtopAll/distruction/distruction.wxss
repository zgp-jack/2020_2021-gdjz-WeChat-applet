@import "../../home/home.wxss";

.index-pullareabox {
  right: 0;
}

.obtn {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 0;
  z-index: 101;
}
.index-area-tips{
    z-index: 0!important;
}
.obtn button {
  width: 550rpx;
  /* height: 95rpx; */
  background: #108eef;
  line-height: 90rpx;
  text-align: center;
  color: white;
  font-size: 40rpx;
  letter-spacing: 4rpx;
}

.index-area-header {
  background: white !important;
}

.area-input {
  background: #F7F4F8 !important;
  z-index: 999999!important;
}

.index-close-area {
  color: #333;
}

.index-area-tips {
  box-shadow: 0 0px 0px !important;
  background: rgba(0, 0, 0, 0);
}

.index-area-history {
  position: relative;
  width: 100%;
  height: 100%;
  padding-top: 110rpx;
  overflow-y: scroll;
  background: #F8F6F9;
  padding: 100rpx 0rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  background:white; 
  padding: 0 20rpx;

}

.history-header image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 6rpx;

}
.history-child{
  background: white;
  padding: 0 20rpx;
  padding-bottom: 16rpx; 
}


.history-children {
    margin-top: 20rpx;
  height: 80rpx;
  display: inline-block;
  font-size: 30rpx;
  background: #F7F4F8;
  width: 30%;
  color: #666366;
  margin-left: 5%;
  text-align: center;
  line-height: 80rpx;
  border-radius: 6rpx;
}
.history-children:first-child{
    margin-left: 0;
}
.history-children:nth-child(3n+1){
    margin-left: 0;
}
