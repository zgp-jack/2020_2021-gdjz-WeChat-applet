<view bindtap="obtn">
  <view class="modifycertificatede">
    <view class="modifycertificatedeone"> <view>职</view><view>业</view><view>技</view><view>能：</view></view>
    <view class="modifycertificatedetwo">
      <input type="text" placeholder="请输入您的职业技能名称" value="{{name}}" bindinput="ovalue"></input>
    </view>
  </view>
  <view class="modifycertificatetime">
    <text class="modifycertificatetimeone">领取证书时间:</text>
    <view class="modifycertificatetimetwo">
      <input type="text" placeholder="请选择您领取证书的时间" value="{{time}}"bindchange="bindstartDate"></input>
    </view>
  </view> 

  <view class="modifycertificateimage">
    <view wx:for="{{imgArrs}}" class='img_item' wx:key="{{item}}">
      <image class="modifycertificateimageone" src='{{item}}' mode='widthFix' bindtap='previewImage' data-item="{{item}}"><view class="delete" catchtap="delete" data-index="{{index}}">X</view></image>
    </view>
    <view class='img_item' bindtap='chooseImage'>
      <image class='modifycertificateimageone' src="../../../images/addimage.png" mode='widthFix' />
    </view>
  </view>
  
<view class="modalDlg" wx:if="{{showModal}}">
    <view class="modalDlgone">
    </view>
    <view class="text">
       <view class="otext">
          提示
       </view>
       <view class="textdetail">
          项目经验删除后，将无法恢复
       </view>
       <view class="buttontext">
         <view>取消</view>
         <view catchtap="vertify">确定</view>
       </view>
    </view>
  </view>

  <view class="modifycertificatebottom">
    <button class="modifycertificatebottomone" catchtap="deleteexper">删除</button>
    <button class="modifycertificatebottomotwo" bindtap="preserve">确认保存</button>
  </view>
</view>