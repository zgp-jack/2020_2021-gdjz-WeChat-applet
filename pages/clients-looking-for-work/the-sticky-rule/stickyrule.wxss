.index-area-tips{
padding: 0 37rpx;

}
.index-area-body{
  padding-top: 0rpx;
  position: static;
  padding-bottom: 120rpx;
}
.index-area-tips{
  position: absolute;
  top: 0rpx;
  font-size: 30rpx;
}
.area-header-words{
  padding-left: 37rpx;
 
  font-weight: bold;
  /* margin-top: 120rpx; */
}
.obtn{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: white;
  font-size: 0;
  z-index: 101;
}
.obtn button{
  width: 500rpx;
  /* height: 95rpx; */
  background: #108EEF;
  line-height: 100rpx;
  text-align: center;
  color: white;
  font-size: 40rpx;
  letter-spacing: 4rpx;
}
.index-area-otext:first-child{
  padding:  0  32rpx;
  border: 1px solid #B5B5B5;
  border-radius: 10rpx;
  font-weight: normal;
   display: inline-block;
   line-height: 50rpx;
}
.index-area-otext:last-child{
  padding:  0 18rpx;
  border: 1px solid #B5B5B5;
    border-radius: 10rpx;
  font-weight: normal;
  display: inline-block;
  line-height: 50rpx;
}
.index-area{
  display: inline-block;
  position: relative;
  margin-right: 60rpx;
  line-height: 40rpx;

}
.index-area:last-child{
  margin-left: 0rpx;
}
