<view>
  <view class="experienceheader">
    <text class="experienceheaderone">项目名称：</text>
    <view class="experienceheadertwo">
      <input type="text" placeholder="请输入项目名称" bindinput="projectname"></input>
    </view>
  </view>
  <view class="experienceheader">
    <text class="experienceheaderone">开始时间：</text>
    <view class="experienceheadertwo">
      <picker mode="date" value="{{startdate}}"bindchange="bindstartDate">
        <input name="addtime" value="{{startdate}}" placeholder="请选择开始时间"></input>
      </picker>
    </view>
  </view>
  <view class="experienceheader">
    <text class="experienceheaderone">完工时间：</text>
    <view class="experienceheadertwo">
      <picker mode="date" value="{{date}}" bindchange="bindDateChange">
        <input name="addtime" value="{{date}}" placeholder="请选择完工时间"></input>
      </picker>
    </view>
  </view>

