/* 弹出层 */
.modalDlg{
    width: 70%;
    position: fixed;
    top: 340rpx;
    left: 0;
    right: 0;
    z-index: 9999;
    margin: 0 auto;
    background-color: #fff;
    border-radius:5px;
    display: flex;
    flex-direction: column;
    align-items: center;
    border: 1px solid rgb(143, 142, 142);
}
.modalDlg .modalDlgone{
  width: 40%;
  margin: 6rpx auto;
