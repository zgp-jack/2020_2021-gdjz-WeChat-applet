.buttontext {
   width: 100%;
   margin:0 auto;
   display: flex;
   justify-content: space-between;
   position: absolute;
   bottom: 0;
}
.buttontext  view{
   width: 50%;
   height: 80rpx;
   background:#0099FF;
   font-size: 32rpx;
   text-align: center;
   line-height: 80rpx;
}

.buttontext  view:first-child{
   border: 1px solid rgb(143, 142, 142);
   color: black;
