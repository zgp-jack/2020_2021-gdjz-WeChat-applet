.circle-line{
    width: 50px;
    display: inline-block;
    position: relative;
    height: 50px;

}
.circle-line text{
    display: block;
    width: 50%;
    height: 5px;
    opacity: .7;
    position: absolute;
    top: calc(50% - 2.5px);
    left: 0px;
    transform-origin: center right; 
}
.circle-line text::before{
    content: '';
    display: block;
    width: 8px;
    height: 3px;
    position: absolute;
    top: 0;
    right: 10px;
    background-color: rgb(245, 245, 248);
}
.circle-line text:nth-child(1){
    transform: rotate(0deg);
}
.circle-line text:nth-child(2){
    transform: rotate(45deg);
}
.circle-line text:nth-child(3){
    transform: rotate(90deg);
}
.circle-line text:nth-child(4){
    transform: rotate(135deg);
}
.circle-line text:nth-child(5){
    transform: rotate(180deg);
}
.circle-line text:nth-child(6){
    transform: rotate(225deg);
}
.circle-line text:nth-child(7){
    transform: rotate(270deg);
}
.circle-line text:nth-child(8){
    transform: rotate(315deg);
}
@keyframes circle {
    0%{
        opacity: 0.05;
    }
    100%{
        opacity: 0.9;
    }
}
.circle-line text{
    animation: circle 1.5s linear infinite; 
}
.circle-line text:nth-child(1){
    animation-delay: 0.2s;
}
.circle-line text:nth-child(2){
    animation-delay: 0.4s;
}
.circle-line text:nth-child(3){
    animation-delay: 0.6s;
}
.circle-line text:nth-child(4){
    animation-delay: 0.8s;
}
.circle-line text:nth-child(5){
    animation-delay: 1s;
}
.circle-line text:nth-child(6){
    animation-delay: 1.2s;
}
.circle-line text:nth-child(7){
    animation-delay: 1.4s;
}
.circle-line text:nth-child(8){
    animation-delay: 1.6s;
}
