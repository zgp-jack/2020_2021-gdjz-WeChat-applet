/* pages/mycard/mycard.wxss */
@import "../detail/ucard/ucard.wxss";

.my-card-editbox{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background:rgba(0, 0, 0, 0.6);
}

.setmycard{
    position: absolute;
    width: 280rpx;
    height: 260rpx;
    background: white;
    right: 20rpx;
    top:90rpx;
    padding: 10rpx 20rpx;
    border-radius: 5px;
}
.setmycard::before{
    position: absolute;
    content: '';
    width: 0;
    height: 0;
    border-width: 0 5px 5px;
    border-style: solid;
    border-color: transparent transparent #fff;
    top: -5px;
    right:70rpx;
}
.setmycard-item{
    position: relative;
    width: 100%;
    height: 80rpx;
    padding-left: 50rpx;
    font-size: 30rpx;
    line-height: 80rpx;
}
.setmycard-item::before{
    position: absolute;
    content: '';
    width: 30rpx;
    height: 30rpx;
    background: url("http://yupao.oss-cn-beijing.aliyuncs.com/newyupao/images/card-edit.png") no-repeat;
    background-size: 100% 100%;
    left: 0;
    top: 28rpx;
}
.setmycard-item-status::before{
    background: url("http://yupao.oss-cn-beijing.aliyuncs.com/newyupao/images/my-card-status.png") no-repeat;
    background-size: 100% 100%;
}
.setmycard-item-top::before{
    background: url("http://yupao.oss-cn-beijing.aliyuncs.com/newyupao/images/card-top.png") no-repeat;
    background-size: 100% 100%;
}