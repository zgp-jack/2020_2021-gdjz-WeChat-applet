<view class="yupao-common-container" wx:if="{{ userInfo }}">
    <view class='common-publish-header' >
        <text class='common-publish-title'>{{ infoId ? "修改" : "发布" }}招工</text>
        <view class='common-publish-tipsbox'>
            <view class='common-publish-tips'>请完善以下信息</view>
        </view>
    </view>

    <view class='common-publish-body'>
        <view class='common-publish-content common-shaded-box'>
            <view class='common-publish-item'>
                <view class='common-publish-item-content'>
                    <text class='common-publish-words'>标题</text>
                    <input class='common-publish-input' value='{{ cardInfo.title }}' placeholder='请输入标题' bindinput='userEnterTitle'></input>
                </view>
            </view>
            <view class='common-publish-item'>
                <view class='common-publish-item-content'>
                    <text class='common-publish-words'>所需工种</text>
                    <view class='common-publish-allwords' wx:if="{{ cardInfo.workTypeIds.length  }}" bindtap="userChangeWorktype"><block wx:for="{{ cardInfo.workType }}" wx:key="{{ index }}"><text class='user-items-text' wx:if="{{ item.is_check && (item.has_children == 0) }}">{{ item.name }}</text><block wx:for="{{ item.children }}" wx:key="{{ index }}" wx:if="{{ item.is_check }}"><text class='user-items-text'>{{ item.name }}</text></block></block></view>
                    <input class='common-publish-input' disabled placeholder='请选择所需工种'  wx:else="{{ cardInfo.workTypeIds.length }}" bindtap="userChangeWorktype"></input>
                </view>
            </view>

            <!-- <view class='common-publish-item'>
                <view class='common-publish-item-content'>
                    <text class='common-publish-words'>地区</text>
                        <picker mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindPickerColumnChange" value="{{[pindex,cindex,tindex]}}" range-key="name" range="{{objectAreaData}}" >
                            <view class='common-publish-allwords' wx:if="{{ cardInfo.provinceId != ''  }}">{{ areaText  }}</view>
                            <input class='common-publish-input' disabled placeholder='请选择地区'  wx:if="{{ cardInfo.provinceId == '' }}" ></input>
                        </picker>
                </view>
            </view> -->


            <view class='common-publish-item'>
                <view class='common-publish-item-content'>
                    <text class='common-publish-words'>详细地址</text>
                        <input class='common-publish-input' disabled placeholder='请输入详细地址'  bindtap='userTapAddress' value='{{ addressData.title }}'></input>
                </view>
            </view>
            <view class='common-publish-item'>
                <view class='common-publish-item-content'>
                    <text class='common-publish-words'>联系人</text>
                    <input class='common-publish-input' value='{{ cardInfo.username }}' placeholder='请输入联系人' bindinput='userEnterUsername'></input>
                </view>
            </view>
            <view class='common-publish-item'>
                <view class='common-publish-item-content'>
                    <text class='common-publish-words'>联系电话</text>
                    <input class='common-publish-input' value='{{ userPhone }}' placeholder='请输入联系电话' bindinput='userEnterNewtel'></input>
                </view>
            </view>
            <view class='common-publish-item' wx:if="{{  (userPhone == '') || ((userPhone != cardInfo.cardTel) && (userPhone != cardInfo.memberTel))  }}">
                <view class='common-publish-item-content common-publish-item-code '>
                    <text class='common-publish-words'>验证码</text>
                    <input class='common-publish-input' type='number' value='' placeholder='请输入验证码' maxlength='4' bindinput='userEditPhoneCode'></input>
                    <text class='publish-getcode-btn' bindtap='userGetCode'>{{ codeTips }}</text>
                </view>
            </view>
            <view class='common-publish-item'>
                <text class='common-publihs-contenttips'>招工详情</text>
                <textarea placeholder='{{ textareaTips }}' wx:if="{{ showTextarea }}" value='{{ cardInfo.content }}' focus='{{ textareaActive }}' bindtap='getTextareaFocus' bindblur='userEnterContent'  maxlength="-1"></textarea>
            </view>
        </view>
        <view class='common-publish-content common-shaded-box publish-uploads-img'>
            <view  bindtap='userDoUploads'>
            <view class='publish-uploads-title'>上传图片<view class='allow-not-uploads'><view class='common-uploads-bgbox'><text class='common-trans {{ showUploads ? "user-uploads-active" : "" }}'></text></view>(可以不上传)</view></view>
            <view class='publish-uploads-tips'><text>可上传工地现场照片、工程图纸、承包合同等</text></view>
            </view>
            <view class='publish-uploads-content  publish-uploads-content-bottom  clearfix' wx:if="{{ showUploads }}">
                <view class='publish-uploads-item  {{ item.httpurl ? "publish-uploads-item-actice" : "" }}' wx:for="{{ cardInfo.imgs }}" wx:key="index" wx:for-index="index">
                    <view class='uploads-item-content' bindtap='userUploadCardImg' data-index="{{ index }}"  data-type="1">
                        <image src='{{ item.httpurl }}'></image>
                        <view class='del-upload-item-img' catchtap="delCardImg" data-index="{{ index }}">
                            <image src='http://cdn.yupao.com/miniprogram/images/imgs-del.png'></image>
                        </view>
                    </view>
                </view>
                <view class='publish-uploads-item' wx:if="{{ cardInfo.imgs.length < cardInfo.imgnum  }}" wx:for="{{ (cardInfo.imgnum - cardInfo.imgs.length ) }}" wx:key="index">
                    <view class='uploads-item-content' bindtap='userUploadCardImg' data-type="0" data-index="{{ cardInfo.imgs.length + index }}"></view>
                </view>
            </view>
        </view>
    </view>

    <text class='common-sure-btn' bindtap='userPublishCard'>确认发布</text>

</view>

<view class='publish-choose-wordtype' wx:if="{{ showWorkType }}">
    <view class='publish-choose-contentbox common-shaded-box'>
        <view class='publish-choose-header'>选择工种</view>
        <view class='publish-choose-body'>
            <view class='publish-choose-content-item' wx:for="{{ cardInfo.workType }}" wx:key="{{ index }}" wx:for-index="pindex" wx:if="{{ item.has_children }}">
                <view class='publish-choose-content-header'>{{ item.name }}</view>
                <view class='publish-choose-content-list' wx:for="{{ item.children }}"  wx:key="{{ index }}" wx:for-index="cindex"   bindtap='userClickItem' data-type='workType'  data-id="{{ item.id }}" data-check="{{ item.is_check }}" data-index='{{ pindex }}' data-key="{{ cindex }}">
                    <text class='choose-content-lish-left'>{{ item.name }}</text>
                    <text class='choose-content-checkbox {{ item.is_check ? "choose-content-checkbox-active":"" }}'></text>
                </view>
            </view>
        </view>
        <view class='publish-choose-footer flex-row'>
            <view bindtap='userSureWorktype'>确定</view>
        </view>
    </view>
</view>


<view class='user-choose-address {{ addressActive ? "user-choose-address-active" : "" }}'>
  <view class='address-header'>
    <view class="choose-address-text" bindtap="showCity">{{ areaText }}</view>
    <view class="inputandimg">
      <input placeholder='请输入你的详细地址' bindinput='userEnterAddress' value='{{ addressText }}' bindfocus="mapInputFocus"></input>
      <image src="{{ clearinput }}" bindtap="clearInputVal"></image>
    </view>
    <text bindtap='closeAddressAction'>取消</text>
  </view>

  <view class='address-body'>
  
      <view class="mapandpois" wx:if="{{ showMaplist }}">
        <map id="mymap" longitude="{{ mapInfo.longitude }}" latitude="{{ mapInfo.latitude }}"  style="position:relative;width:100%;height:400rpx;" bindregionchange="userRegMap">
          <cover-image class="map-coverimage" src="/images/gps-posi.png" wx:if="{{ addressActive }}"></cover-image>
        </map>
      <view class='address-container'>
        <view class='address-tips' wx:if="{{ !addressList.length }}">{{ addressTips }}</view>
        <view  wx:if="{{ addressList.length }}">
          <view class='address-item' bindtap='setAddressData' data-title='{{ item.name }}' data-adcode='{{ adcode }}' data-district='{{ item.district ? item.district : ""  + item.address }}' data-location='{{ item.location }}' wx:for="{{ addressList }}" wx:key="{{ index }}">
            <view class='address-item-title {{ (addressData.location == item.location && addressData.title == item.name) ? "address-title-active" : "" }}'>{{ item.name }}</view>
            <view class='address-item-text'>{{ item.district ? item.district : ""  + item.address }}</view>
          </view>
        </view>
      </view>
    </view>

    <view class="historyandkeys" wx:else>
      <view class='address-container historyandkeys-body'>
        <view class='address-tips' wx:if="{{ !historyCityLists.length }}">暂无数据</view>
        <view  wx:if="{{ historyCityLists.length }}">
          <view class="history-title" wx:if="{{ !isKeyvalActive }}">历史记录</view>
          <view class='address-item' bindtap='setAddressData' data-title='{{ item.name }}' data-adcode='{{ item.adcode }}' data-district='{{ item.district + (item.address ? item.address : "") }}' data-location='{{ item.location }}' wx:for="{{ historyCityLists }}" wx:key="{{ index }}">
            <view class='address-item-title {{ (addressData.location == item.location && addressData.title == item.name) ? "address-title-active" : "" }}'>{{ item.name }}</view>
            <view class='address-item-text'>{{ item.district + (item.address ? item.address : "") }}</view>
          </view>
        </view>
      </view>
    </view>

  </view>

</view>


<!-- 地区选择 -->
<view class='index-pullareabox {{ showArea ? "index-pullareabox-active":"" }}'>
    <view class='index-area-header'>
      <view class="searchinputbox">
        <input class="area-input" placeholder="请输入城市" bindinput="searchInput" bindtap="showInputList" value="{{ searchInputVal }}"></input>
        <image src="{{ clearinput }}" bindtap="clearInputAction"></image>
      </view>
      <text class='index-close-area' bindtap='closeArea'>取消</text>
    </view>

    <view class="searchcitybox" wx:if="{{ showInputList }}">
      <view class="search-list-item" wx:for="{{ isAllAreas ? allAreaLists : nAreaLists }}" wx:key="{{ index }}"  bindtap='chooseInputCtiy'  data-id="{{ item.id }}" data-area="{{ item.name }}" >{{ item.cname }} </view>
    </view>


    <view class='index-area-tips overwords'>当前选择城市：<text>{{ areaText }}</text></view>
    <view class='index-area-body'>
        <view class='index-area-item' wx:if="{{ gpsOrientation || locationHistory }}">
            <text class='area-header-words'>当前定位城市/最近访问</text>
            <view class='area-body-content clearfix'>
              <view class="gpsposi"><view class='overwords' data-id="{{ gpsOrientation.id }}" data-area="{{ gpsOrientation.name }}"  bindtap='chooseThisCtiy'><image src="{{ gpsposi }}"></image>{{ gpsOrientation.name }}</view></view>
                <view wx:for="{{ locationHistory }}" wx:key="{{ index }}"><text class='overwords' data-id="{{ item.id }}" data-area="{{ item.name }}"  bindtap='chooseThisCtiy'>{{ item.name }}</text></view>
            </view>
        </view>
        <view class='index-area-item' wx:for="{{ areadata }}" wx:key="{{ index }}"  wx:for-item="areaItem">
            <text class='area-header-words'>{{ areaItem[0].city }}</text>
            <view class='area-body-content clearfix'>
                <view wx:if="{{ index != 0 }}" wx:for="{{ areaItem }}" wx:key="{{ index }}"><text class='overwords' data-id="{{ item.id }}" data-area="{{ item.city }}" data-pname="{{ areaItem[0].city }}" data-pid="{{ areaItem[0].id }}"   bindtap='chooseThisCtiy'>{{ item.city }}</text></view>
            </view>
        </view>
    </view>
</view>



<view class="common-userauth" wx:if="{{ !userInfo }}">
  <image src='{{ icon }}' class='userauth-topicon'></image>
  <view class='userauth-title'>登录鱼泡网</view>
<view class='userauth-words'>招工 找活抢先一步，用的安心 赚的开心。</view>
<button class='userauth-btn userauth-sure-btn'  open-type="getUserInfo"  bindgetuserinfo='bindGetUserInfo' >微信授权登录</button>
<button class='userauth-btn  userauth-back-btn' bindtap='returnPrevPage'>返回上一页</button>
</view>
