page{background: url(http://cdn.yupao.com/newyupao/images/fast-code.png) no-repeat;background-size: 100% 100%;padding-top: 320rpx;}
.fast-codebox{position: relative;width: 100%;padding: 0 30rpx;}
.fast-code{position: relative;width: 100%;border-radius: 5px;overflow: hidden;box-shadow: #e7e6e4 0 0 10rpx;}
.fast-code-header{position: relative;width: 100%;height: 80rpx;line-height: 80rpx;background: #0099ff;text-align: center;color: white;font-size: 28rpx; letter-spacing: 2rpx;font-weight: bold;}
.fast-code-body{position: relative;width: 100%;background: white;padding: 30rpx;line-height: 60rpx;font-size: 28rpx;}
.fast-code-body view{position: relative;color: #f73812;display: inline-block;margin-right: 2rpx;}
.fast-code-input{display: block;margin: 10rpx 0; width: 100%;border: 1px solid #dcdcdc;text-align: center; padding: 0 30rpx;height: 80rpx;line-height: 80rpx;border-radius:3px;font-size: 28rpx;}
.fast-code-body .fast-recodebox{position: relative;font-size: 28rpx;color:#8f8f94 }
.fast-code-body .fast-recodebox view{position: relative;font-size: 28rpx;color:#0099ff; }
.fast-code-btn{
    position: relative;
    border-radius: 5px;
    background: #0099ff;
    color: #fff;
    margin:30rpx auto 20rpx;
    display: block;
    height: 80rpx;line-height: 80rpx;
    padding: 0 50px;
    width: max-content;
    font-size: 28rpx;
    font-weight: bold;
    letter-spacing: 2px;
    box-shadow: #e7e6e4 0 0 5px;
    background: -webkit-linear-gradient(#00BFFF, #0099ff);
    background: -o-linear-gradient(#00BFFF, #0099ff);
    background: -moz-linear-gradient(#00BFFF,#0099ff);
    background: linear-gradient(#00BFFF, #0099ff);
}








