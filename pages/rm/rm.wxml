<scroll-view>  

    <view wx:if="{{voices}}" class="common-list" style="margin-bottom:120rpx;">  

        <block  wx:for="{{voices}}" wx:key="{{ index }}">  

            <view class="board">  

                <view class="cell"  >  

                    <view class="cell-bd" data-key="{{item.filePath}}" bindtap="gotoPlay" >   

                        <view  class="date">存储路径:{{item.filePath}}</view>  

                        <view  class="date" >存储时间:{{item.createTime}}</view>  

                        <view  class="date">音频大小:{{item.size}}KB</view>  

                    </view>      

                </view>  

            </view>  

        </block>  

    </view>  

</scroll-view>   

<view  wx:if="{{isSpeaking}}"  class="speak-style">  

    <image class="sound-style" src="http://cdn.yupao.com/miniprogram/test/rm_voice1.png" ></image>  

    <image wx:if="{{j==2}}" class="sound-style" src="http://cdn.yupao.com/miniprogram/test/rm_voice2.png" ></image>  

    <image wx:if="{{j==3}}" class="sound-style" src="http://cdn.yupao.com/miniprogram/test/rm_voice3.png" ></image>  

    <image wx:if="{{j==4}}" class="sound-style" src="http://cdn.yupao.com/miniprogram/test/rm_voice4.png" ></image>  

    <image wx:if="{{j==5}}"class="sound-style" src="http://cdn.yupao.com/miniprogram/test/rm_voice5.png" ></image>  

</view>  

<view class="record-style">  

    <button class="btn-style" bindtouchstart="touchdown" bindtouchend="touchup">按住 录音</button>  

</view>