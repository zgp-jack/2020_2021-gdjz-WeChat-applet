/* pages/releaseSuccess/releaseSuccess.wxss */
page {
	background: #fff;
}
.releasesuccessicon {
	width: 160rpx;
	height: 184rpx;
	margin: 130rpx auto 20rpx auto;
	display: block;
}
.tips-text {
	font-size: 35rpx;
	text-align: center;
	display: block;
	padding: 0 80rpx;
}
.btn-box {
	display: flex;
	justify-content: space-between;
	margin-top: 50rpx;
}
.btn-box button {
	font-size: 28rpx;
	line-height: 80rpx;
	padding: 0 50rpx;
	color: #333;
	border: 1px solid #999;
	background: #fff;
}
.btn-box button::after {
	border: none;
}
.btn-box button:last-child {
	color: #009bff;
	border: 1px solid #009bff;
}
.slide-box {
	padding: 0 40rpx;
	margin-top: 100rpx;
}
.slide-head {
	width: 100%;
	height: 44rpx;
}
.slide-head-outer {
	height: 60rpx;
	width: 100%;
	background: #0087FF;
	box-shadow: 0px 10px 18px 0px rgba(125, 139, 148, 0.28);
	border-radius: 15px;
}
.slide-head-inner {
	width: 100%;
	height: 40rpx;
	background: #0099FF;
	box-shadow: 0px 9px 32px 0px rgba(0, 153, 255, 0.53);
	border-radius: 16px;
}
.slide-content {
	padding: 0 20rpx;
}
.slide-content-outer {
	width: 100%;
	height: 420rpx;
	background: #FFFFFF;
	box-shadow: 0px 10px 18px 0px rgba(0, 153, 255, 0.15);
	border-radius: 0px 0px 10px 10px;
	/* box-shadow: inset 0px 20px 13px -12px rgba(0, 153, 255, 0.53); */
	padding: 50rpx 30rpx;
}
.slide-content-inner {
	width: 100%;
	height: 100%;
	background: #F7FBFE;
	border: 1px dashed #0099FF;
	border-radius: 5px;
	padding: 33rpx 20rpx;
	position: relative;
}
.slide-title {
	width: 230rpx;
	height: 40rpx;
	background: #0099ff;
	font-size: 30rpx;
	color: #fff;
	border-radius: 40rpx;
	text-align: center;
	position: absolute;
	left: 50%;
	margin-left: -115rpx;
	top: -25rpx;
	line-height: 40rpx;
}
.swiper-box {
	width: 100%;
	height: 100%;
	overflow: hidden;
}
.swiper-box text {
	display: block;
	font-size: 32rpx;
	line-height: 65rpx;
	color: #0099FF;
	text-align: left;
}