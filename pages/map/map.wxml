<view class="flex-style">
  <view class="flex-item {{ type =='drive' ? 'active' : '' }}" bindtouchstart="driveRoute">驾车</view>
  <view class="flex-item {{ type =='walk' ? 'active' : '' }}" bindtouchstart="walkRoute">步行</view>
  <view class="flex-item {{ type =='bus' ? 'active' : '' }}" bindtouchstart="busRoute">公交</view>
  <view class="flex-item {{ type =='ride' ? 'active' : '' }}" bindtouchstart="rideRoute">骑行</view>
</view>
<view class="map_box">
  <map id="navi_map" longitude="{{ longitude }}" latitude="{{ latitude }}" scale="15" markers="{{ markers }}" polyline="{{ polyline }}" show-location="{{ 'true' }}"></map>
</view>

<view class="text_box">
  <view class="text">{{distance}}</view>
  <view class="text">{{cost}}</view>
  <view class="detail_button" bindtap="showDetail">详情</view>
</view>


