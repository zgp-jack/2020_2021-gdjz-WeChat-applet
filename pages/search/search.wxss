/* pages/search/search.wxss */
page {
  background: #fff;
}
.search-page{
  padding: 30rpx 30rpx;
}
.search-tab {
  width: 100%;
  height: 70rpx;
}
.search-tab-item{
  /* height: 100%; */
  width: 30%;
  display: flex;
  justify-content: space-between;
}
.search-tab-button{
  font-size: 30rpx;
}
.search-active{
  color: #0099ff;
  font-weight: bold;
  position: relative;
}
.search-active::after{
  content: "";
  display: blocks;
  position: absolute;
  bottom: -10rpx;
  margin-left: -50%;
  transform: translateX(-50%);
  width: 70%;
  height: 8rpx;
  background-color: #0099ff;
}

.search-input-box {
  width: 100%;
  box-sizing: border-box;
  padding-right: 0;
  display: flex;
}

.input-box {
  background: #f5f5f5;
  display: flex;
  align-items: center;
  flex: 1;
  height: 70rpx;
  border-radius: 8rpx;
}
.input-box input{
  font-size: 28rpx;
  flex: 1;
  height: 100%;
}
.input-box image {
  width: 50rpx;
  height: 50rpx;
  display: block;
  padding: 15rpx;
}

.search-input-box button {
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #999;
  background: #fff;
}

.search-input-box button::after {
  border: none;
}
.search-button{
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  font-size: 28rpx;
  font-weight: 500;
  color:#999;
}

.history-search .title {
  font-size: 35rpx;
  font-weight: 500;
}

.history-search image {
  width: 30rpx;
  height: 35rpx;
  display: block;
}

.history-search-title-box {
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
}
.tag-box{
  display: flex;
  flex-wrap: wrap;
}
.tag-box view{
  background-color: #f6f5f5;
  color: #333;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  margin-right: 20rpx;
  height: 50rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  border-radius: 4rpx;
}
