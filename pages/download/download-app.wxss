.page-downloadapp{
    position: relative;
    display: block;
}
.download-app{
    position: relative;
    display: block;
    width: 100%;
}
.downloadapp-copyview{
    position: relative;
    width: 100%;
    height: 350rpx;
}
.downloadapp-content{
    position: relative;
    width: 100%;
    padding: 20rpx;
    overflow: hidden;
}
.downloadapp-item{
    position: relative;
    padding: 20rpx 0;
}
.downloadapp-item video{
    position: relative;
    display: block;
    width: 100%;
    border-radius: 10rpx 10rpx 0 0 ;
}
.downloadapp-item text{
    background: rgba(0, 0, 0, 0.6);
    color: white;
    text-align: center;
    display: block;
    width: 100%;
    font-size: 32rpx;
    line-height:80rpx;
    border-radius:  0 0 10rpx 10rpx;
    letter-spacing: 5rpx;
}
.downloadapp-words{
    position: relative;
    display: block;
    width: 100%;
    line-height: 100rpx;
    font-size: 28rpx;
    font-weight: bold;
    text-align: center;
    letter-spacing: 5rpx;
    color: #0099ff;
}