/* pages/expend/expend.wxss */
.integral-header{
    position: relative;
    width: 100%;
    height: 100rpx;
    background: white;
    text-align: center;
    line-height: 100rpx;
    font-size: 30rpx;
    letter-spacing: 2rpx;
    color: #333;
}
.integral-content{
    position: relative;
    width: 100%;
    padding: 0 27rpx 0 87rpx;
}
.integral-list-item{
    position: relative;
    width: 100%;
    height: 200rpx;
    background: white;
    border-radius: 5rpx;
    margin-top: 15rpx;
    box-shadow: #e7e6e4 0 0 10rpx;
}
.integral-list-time{
    position: absolute;
    width: 120rpx;
    height: 120rpx;
    background: #0099ff;
    left: -60rpx;
    top: 40rpx;
    border-radius: 2px;
    padding: 10rpx 0;
}
.integral-list-time text{
    position: relative;
    display: block;
    text-align: center;
    line-height: 50rpx;
}
.integral-list-time text:nth-child(1){
    color: white;
    font-size: 26rpx;
}
.integral-list-time text:nth-child(2){
    color: white;
    font-size: 34rpx;
}
.integral-list-words{
    position: relative;
    padding:10rpx 27rpx 10rpx 80rpx;
    width: 100%;
    height: 200rpx;
}
.integral-list-words view{
    position: relative;
    display: block;
    line-height:60rpx;
    color: #333;
}
.integral-list-words .integral-list-title{
    font-size: 32rpx;
}
.integral-list-words .integral-list-info{
    font-size: 30rpx;
}
.integral-list-lasttime{
    font-size: 30rpx;
}
.integral-list-lasttime text{
    float: right;
    font-size: 30rpx;
    color: #fd4040;
}




.expend-showthis-record{
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.3);
    z-index: 5;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}
.expend-show-recruit{
    position: relative;
    width: 90%;
    height:70%;
    background: white;
    border-radius: 10px 10px 5px 5px;
    padding-top: 50rpx;
    box-shadow: #e7e6e4 0 0 10rpx;
}
.expend-close-record{
    position: absolute;
    width: 100rpx;
    height: 100rpx;
    left: 50%;
    top: -50rpx;
    margin-left: -50rpx;
    background: url("http://cdn.yupao.com/miniprogram/images/expend-close.png") no-repeat;
    background-size: 100% 100%;
}
.expend-show-recruit .yupao-common-list-left{
    width: auto;
}
.expend-show-recruit .yupao-common-list{
    box-shadow: none;
    border: 0;
    margin-top: 0;
    height: calc(100% - 50rpx);
    overflow-y: scroll;
}
.expend-show-recruit .yupao-common-list-left text{
    margin-right: 20rpx;
    color: #0099ff;
}
.expend-show-recruit .yupao-common-list-left text:nth-last-child(1){
    margin-right: 0;
}
.expend-show-recruit  .yupao-common-lists-text{
    padding: 20rpx 27rpx;
    line-height:50rpx;
}
.list-call-phone{
    display: inline-block;
    color: #fff;
    padding: 0 20rpx;
    font-size: 26rpx;
    border-radius:8rpx;
    background: #67C23A;
    margin:0 5rpx;
}


.list-complain-phone{background: #ff0000;}