@import '../expend/expend.wxss';

.integral-header{
  width: 100%;
  height: 100rpx;
  display: flex;
  border-bottom: 1px solid #EEEEEE;
}
.integral-header-source{
  width: 50%;
  height: 100%;
  border-right: 1px solid #EEEEEE;
}
.integral-source-text{
  position: relative;
  display: inline-block;
  color: #0099FF;
  font-size: 30rpx;
  font-weight: bold;
}
.integral-source-text:after{
  position: absolute;
  content: "";
  display: inline-block;
  width: 40%;
  height: 10rpx;
  background-color: #0099FF;
  bottom: 18rpx;
  margin-left: -50%;
  transform: translateX(-50%);
  border-radius: 10rpx;
}
.integral-header-expend{
  width: 50%;
  height: 100%;
}
.integral-header-expend text{
  font-size: 30rpx;
  font-weight: bold;
}
.integral-select{
  background: white;
}
.integral-select .select{
  padding: 24rpx 24rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 30rpx;
}
/* .select .time{
  font-weight: bold;
} */
.select .triangle{
  width: 38rpx;
  height: 34rpx;
  margin-left: 8rpx;
  margin-top: 6rpx;
}
.select .classfy{
  background: #F6F6F6;
  color: #4F4F4F;
  padding: 6rpx 4rpx 6rpx 14rpx;
  border-radius: 6rpx;
}
.integral-detail{
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  padding: 24rpx 24rpx;
  border-top: 1px solid #EEEEEE;
}
.dointegral{
  margin-left: 10rpx;
}
.integral-detail text{
  padding-right: 10rpx;
}
.integral-detail .num{
  color: #0099ff;
}
.timeall{
  display: flex;
  align-items: center;
}
.classfy{
    display: flex;
  align-items: center;
}
.classfy image{
    width: 38rpx;
    height: 34rpx;
}