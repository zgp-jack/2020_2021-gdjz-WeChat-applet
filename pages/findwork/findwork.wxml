<import src="/pages/footer/footer.wxml"/>
<import src="/pages/tpl/app/app.wxml"/>

<!-- 搜索头部 -->
<view class="lists-header">
    <input placeholder="找工人，找班组，找队伍"  bindconfirm="userTapSearch"  confirm-type="search"    bindinput='bindKeyInput' bindtap="closeAllSelect"/>
    <text bindtap='userTapSearch'>搜索</text>
</view>

<!-- 筛选条件 -->
<view class='lists-condition-menu flex-row mybottomborder'>
    <view class='lists-condition-item {{ (showListsInfo == "1") ? "lists-condition-active" : ""}}' bindtap='showListsType' data-type="1">
        <view class='overwords'>{{ areaText }}<image src='{{ selectimg }}'></image></view>
    </view>
    <view class='lists-condition-item {{ (showListsInfo == "2") ? "lists-condition-active" : ""}}' bindtap='showListsType' data-type="2">
        <view class='overwords'>{{ typeText }}<image src='{{ selectimg }}'></image></view>
    </view>
    <view class='lists-condition-item {{ (showListsInfo == "3") ? "lists-condition-active" : ""}}' bindtap='showListsType' data-type="3">
        <view class='overwords'>{{ teamText }}<image src='{{ selectimg }}'></image></view>
    </view>
</view>

<!-- 筛选条件列表 -->
<view class='user-choose-shade {{ (showListsInfo != "0") ? "user-choose-shade-active":"" }}' bindtap='closeAllSelect'>
    <view class='user-choose-item {{ (showListsInfo == "1") ? "user-choose-item-active" : "" }}'  wx:if="{{ showListsInfo == '1' }}">
        <view class='filtrate-list-item mybottomborder overwords {{ (province == index) ? "filtrate-list-active" : "" }}'  wx:for="{{ fillterArea }}" wx:key="{{ index }}" catchtap='userChooseProvince' data-index="{{ index }}"data-id='{{ item.id }}' data-area="{{ item.name }}">
            <text>{{ item.name }}</text>
        </view>
    </view>
    <view class='user-choose-item {{ (showListsInfo == "2") ? "user-choose-item-active" : "" }}' wx:if="{{ showListsInfo == '2' }}">
        <view class='filtrate-list-item mybottomborder overwords {{ (worktype == index) ? "filtrate-list-active" : "" }}' wx:for="{{ fillterType }}" wx:key="{{ index }}" catchtap='userChooseWorktype' data-index="{{ index }}"  bindtouchstart="touchStart" bindtouchend="touchEnd"   data-id='{{ item.id }}' data-haschild="{{ item.has_children }}" data-type="{{ item.name }}">
            <text>{{ item.name }}</text>
            <view class='filtrate-item-lists {{ (worktype == index) ? "filtrate-item-lists-active" : "" }}' wx:if="{{ item.has_children }}" >
                <view class='filtrate-item-info mybottomborder overwords {{ (workinfo == item.id) ? "filtrate-item-info-active" : "" }}' wx:for="{{ item.children }}" wx:key="{{ index }}" wx:for-index="cindex" catchtap='userChooseWorkinfo' data-id="{{ item.id }}" data-type="{{ (cindex == 0) ? fillterType[index].name : item.name }}">{{ item.name }}</view>
            </view>
        </view>
    </view>
    <view class='user-choose-item {{ (showListsInfo == "3") ? "user-choose-item-active" : "" }}' wx:if="{{ showListsInfo == '3' }}" catchtap='stopThisAction'>
        <view class='filtrate-list-item mybottomborder overwords {{ ( teamindex == index) ? "filtrate-list-active" : "" }}' wx:for="{{ fillterTeam }}" wx:key="{{ index }}" catchtap='userChooseTeam' data-index="{{ index }}"  data-id='{{ item.id }}' data-team="{{ item.name }}">
            <text>{{ item.name }}</text>
        </view>
    </view>
</view>


<scroll-view class='yupao-lists-container yupao-common-container'  scroll-y="true" scrolltolower="100" bindscrolltolower="onReachBottom" scroll-top="{{ scrollTop }}">

    <!-- 公告 -->
    <view class='yupao-lists-notice'>
        <view class='yupao-lists-wxinfo'>
            <view class='yupao-lists-wxtips'><text class='yupao-lists-tips'>加群：</text>加工友微信号:<text  data-wechat="{{ wechat }}" bindtap='clipboardWechat'>{{ wechat }}</text> 拉你进工人微信群。客服电话:<text bindtap='callThisPhone' data-phone="{{ phone }}">{{ phone }}</text></view>
        </view>
        <view class='yupao-lists-noticetips'>
            <text class='yupao-common-tips yupao-lists-newtips'>鱼泡公告：</text>
            <view class='lists-notice-swiper'>
                <swiper indicator-dots="{{ notice.indicatorDots }}" autoplay="{{ notice.autoplay}} " interval="{{ notice.interval }}" duration="{{ notice.duration }}" circular="{{ notice.circular }}"  vertical="{{ notice.vertical }}">
                    <block wx:for="{{ notice.lists }}" wx:key="{{ index }}">
                        <swiper-item>
                            <text class='lists-notice-text overwords' data-id="{{ item.id }}" bindtap='showThisNotice'>{{ item.title }}</text>
                        </swiper-item>
                    </block>
                </swiper>
            </view>
        </view>
    </view>

    <view class='listsbox '>

        <block  wx:for="{{ lists }}" wx:key="{{ index }}" wx:if="{{ lists.length }}">

        <!-- <navigator url='../detail/ucard/ucard?id={{ item.id }}'> -->
        
        <view class='index-list-item' >
            <form report-submit="true" bindsubmit="showDetailInfo" data-id="{{ item.id }}" data-type="resume">
                <button class='lists-template-btn' form-type='submit'></button>
                <view class='index-item-header'>
                    <text class='index-item-title overwords'>{{ item.title }}</text>
                    <text class='index-item-time'>{{ item.time }}</text>
                </view>
                <view class='index-item-body'>
                    <view class='index-item-userimg'><image src='{{ item.image }}'></image></view>
                    <view class='index-item-words'>
                        <view class='index-words-item overwords'>
                            <image src='{{ listsImg.infoman }}'></image>
                            <text>联系人：{{ item.user_name }}</text>
                        </view>
                        <view class='index-words-item overwords'>
                            <image src='{{ listsImg.posi }}'></image>
                            <text>{{ item.show_address }}</text> 
                        </view>
                        <view class='index-words-item overwords'>
                            <image src='{{ listsImg.status }}'></image>
                            <text>找活状态： <text>{{ (item.top == "1") ? "置顶中" : item.state_arr.state }}</text></text>
                        </view>
                    </view>
                </view>
            </form>
        </view>
        <!-- </navigator> -->
        <ad  class="lists-ad" unit-id="{{ unitid }}"  wx:if="{{index % 5 == 0 && index > 5}}"></ad>
        <navigator url='/pages/download/download-app' wx:if="{{ (index == 5) && (fillterType[worktype].id != '55')}}" class='lists-ad lists-ad-image'>
            <image  src="{{ appLinkImg }}"></image>
        </navigator>
        <navigator class='lists-ad lists-ad-image' target="miniProgram"  wx:if="{{ (index == 5) && (fillterType[worktype].id == '55')}}" open-type="navigate" app-id="wx0ae31bf0edad4390" path="" extra-data="" version="release" >
            <image  src="{{ jixieLinkImg }}"></image>
        </navigator>

        </block>

        <view class='nodata-texttips' wx:if="{{ nothavemore }}">没有更多数据了</view>

        <view class='common-nodatabox flex-column lists-nodata'  wx:if="{{ showNothinkData }}">
            <image src='{{ listsImg.nodata }}'></image>
            <text>没有找到相关数据</text>
        </view>
    </view>

</scroll-view>

<view class='fixed-ad'   bindtap='jumpThisLink'  data-url="/pages/download/download-app"  data-type='0'>
    <image src='{{ fixedAdImg }}'></image>
</view>

<view class='bottompublishbtn'  bindtap='valiUserCard'>发布找活</view>

