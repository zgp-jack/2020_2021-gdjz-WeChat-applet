/* pages/information/mymessage/mymessage.wxss */
@import "../../userauth/userauth.wxss";
.common-userauth {position: fixed;left: 0;top: 0;z-index: 999999;width: 100%;height: 100%;background: white;}
page{ background: #f7f6f9;}
.msgflex{display:flex;justify-content: space-between;align-items: center;}
.messsage-lists{ padding:10rpx 20rpx;background:#fff;margin-top:20rpx}
.messsage-lists-top{ border-bottom: 1rpx dashed #f2f2f2; padding-bottom:10rpx;display: flex;flex-direction: row;}
.msgNumber{ width: 28rpx;height: 28rpx; background: #fd0618; border-radius: 100%; position: absolute; top: 3rpx; right: 0; color: #fff;  font-size: 20rpx; line-height: 28rpx;  text-align: center;}
.msgNumber_dot{ position:absolute;top:0;right:0;background:rgba(253,6,24,1);border-radius:100%;padding:8rpx;}
.messsage-num{position: relative;width:100rpx;padding-top: 10rpx;}
.messsage-title{width:100%;line-height: 25px;padding-left:10rpx;}
.messsage-deail{font-size:26rpx;color:rgba(180,178,178,1);line-height: 30rpx;padding: 10rpx 0;}
.messsage-bottom{display: flex;justify-content: space-between;padding-top:10rpx;align-items:center;}
.fast-list-nomore{position: relative;width: 100%;text-align: center;line-height: 50rpx;margin-top: 30rpx;font-size: 28rpx;color: #666;}
.rightarrow{width: 18rpx;height: 25rpx;}