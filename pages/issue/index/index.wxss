/* @import "../../userauth/userauth.wxss"; */
@import "../../fast/issue/index.wxss";

page{
  background-color: #f8f8f8; 
}
.common-userauth{
  position: fixed;
  z-index: 666;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: white;
  padding-top: 60rpx;
}
.issue-container{
  position: relative;
  padding-bottom: 130rpx;
  z-index: 10;
}
.issue-textarea-title{
  font-size: 28rpx;
  line-height: 70rpx;
}
.issue-textarea{
  border: 0;
}
.issue-form{
  position: relative;
}
.issue-form-item{
  position: relative;
  padding-left: 170rpx;
  padding-right: 20rpx;
  background-color: white;
  margin-top: 20rpx;
  border-radius: 5rpx;
}
.issue-form-item text{
  position: absolute;
  left: 20rpx;
  line-height: 85rpx;
  font-size: 28rpx;
}
.issue-form-item input{
  position: relative;
  width: 100%;
  line-height: 85rpx;
  height: 85rpx;
  font-size: 28rpx;
}
.issue-history-published{
  position: relative;
  margin-top: 20rpx;
  background-color: white;
  padding: 30rpx 20rpx;
  border-radius: 5rpx;
}
.issue-history-title{
  position: relative;
  text-align: center;
}
.issue-history-title text{
  font-size: 28rpx;
  border-bottom: 3px solid #0099ff;
}
.issue-history-item{
  position: relative;
  padding: 20rpx 0;
  border-bottom: 1px solid #dcdcdc;
  justify-content: space-between;
}
.issue-history-item:nth-last-child(1){
  border-bottom: 0;
}
.issue-history-btn{
  position: relative;
  right: 20rpx;
  top: 10rpx;
  background-color: #0099ff;
  color: white;
  font-size: 26rpx;
  border-radius: 5rpx;
  line-height:50rpx;
  width: 300rpx;
  text-align: center;
  border-radius: 5rpx;
  margin-left: 20rpx;
}
.issue-hisroty-text{
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  font-size: 28rpx;
  color: #A8A8A8;
}

.common-picker-container{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.65);
  z-index: 100;
  transition: 0.3s;
}
.common-picker-box{
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 0;
  height: 640rpx;
  background-color: white;
  padding-top: 95rpx;
  transition: 0.3s;
}
.common-picker-header{
  position: absolute;
  width: 100%;
  top: 0;
  line-height: 93rpx;
  border-bottom: 1rpx solid #ededed;
}
.common-picker-left{
  position: absolute;
  left: 20rpx;
  top: 0;
  font-size: 26rpx;
  color: #777777;
  z-index: 5;
}
.common-picker-title{
  position: relative;
  text-align: center;
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
}
.common-picker-right{
  position: absolute;
  right: 20rpx;
  top: 0;
  font-size: 26rpx;
  color: #0099ff;
  z-index: 5;
}
.common-picker-body{
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #F7F7F7;
}
.common-picker-content{
  position: relative;
  width: 100%;
  height: 100%;
  overflow-y: scroll;
}
.common-picker-content2{
  position: absolute;
  width: 50%;
  height: 100%;
  left: 50%;
  top: 0;
  overflow-y: scroll;
  background-color: white;
}
.common-picker-item{
  position: relative;
  width: 100%;
  line-height: 40rpx;
  padding: 25rpx 20rpx;
  font-size: 28rpx;
  color: #2C2C2C;
  border-bottom: 1px solid #EDEDED;
}
.common-picker-item text{
  position: absolute;
  top: 10rpx;
  display: inline-block;
  font-size: 20rpx;
  padding: 5rpx;
  border-radius: 50%;
  background-color: #ff0000;
  color: white;
  width: 30rpx;
  height: 30rpx;
  line-height: 23rpx;
  text-align: center;
}
.common-picker-none{
  z-index: 0;
  opacity: 0;
  background: transparent;
}
.common-picker-none .common-picker-box{
  bottom: -700rpx;
}
.issue-form-upload{
  position: relative;
  width: 100%;
  margin-top: 20rpx;
  background-color: white;
  padding: 0 20rpx;
}
.issue-form-header{
  position: relative;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 5rpx;
  z-index: 2;
}
.issue-upload-switch{
  position: absolute;
  right: 0;
  top: 0;
}
.issue-upload-tips{
  position: relative;
  line-height: 75rpx;
  font-size: 26rpx;
  color: #9F9F9F;
  border-top: 1rpx solid #EEEEEE;
  border-bottom: 1rpx solid #EEEEEE;
}
.issue-upload-body{
  position: relative;
  padding:30rpx 0 5rpx;
}
.issue-upload-show{
  position: relative;
}
.issue-upload-item{
  position: relative;
  width: 33.333%;
  height: 190rpx;
  padding: 20rpx 10rpx;
  float: left;
  margin-top: -20rpx;
  border-radius: 5rpx;
  overflow: hidden;
}
.issue-upload-item image{
  width: 100%;
  height: 100%;
  display: block;
}
.mini-del{
  position: absolute;
  width: 35rpx;
  height: 35rpx;
  border-radius: 50%;
  background: white url(http://cdn.yupao.com/miniprogram/images/mini-del.png) no-repeat;
  background-size: 100% 100%;
  right: 10rpx;
  top: 10rpx;
}
.common-picker-item-active,.common-picker-text-active{
  color: #0099ff;
}
.common-picker-item-active::after{
  position: absolute;
  content: '';
  width: 4px;
  height: 100%;
  left: 0;
  top: 0;
  background-color: #0099ff;
}
.getphonecode{
  position: absolute;
  top: 18rpx;
  right: 20rpx;
  height: 50rpx;
  padding: 0 20rpx;
  line-height: 50rpx;
  background-color: #0099ff;
  color: white;
  border-radius: 5rpx;
  font-size: 28rpx;
  z-index: 3;
  overflow: hidden;
}
.imgitem-box{
  width: 100%;
  height: 100%;
}
.input-item-text{
  position: relative;
  width: 100%;
  padding: 20rpx 0;
  line-height: 45rpx;
  font-size: 28rpx;
}
.issue-sure-btn-box{
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  padding: 20rpx 30rpx;
  z-index: 15;
  background-color: white;
  box-shadow: 0 0 2rpx #dcdcdc;
}

.issue-sure-btn{
  position: relative;
  width: 100%;
  background-color: #0099ff;
  color: #fff;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 5rpx;
  letter-spacing: 5rpx;
}