/* pages/ucenter/ucenterNew/hireMembers.wxss */

.ucener-userinfo-wrap {
    width: 100%;
    height: 315rpx;
    padding: 0 27rpx;
}

.ucenter-userinfo {
    position: relative;
    width: 100%;
    height: 100%;
    display: block;
    background: linear-gradient(135deg, rgba(6, 151, 255, 1) 0%, rgba(76, 114, 255, 1) 100%);
    box-shadow: 0px 5px 10px 0px rgba(116, 152, 250, 0.5);
    border-radius: 5px;
}

.ucenter-userinfo-box {
    position: relative;
    width: 100%;
    padding: 0 27rpx;
    height: 175rpx;
}

.ucenter-userimg {
    position: absolute;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    top: 25rpx;
    left: 27rpx;
}

.ucenter-userinfo-words {
    position: relative;
    width: 100%;
    height: 175rpx;
    font-size: 30rpx;
    color: #FFFFFF;
    line-height: 50rpx;
    padding: 40rpx 0 10rpx 140rpx;
    border-bottom: 1rpx dotted #E0E0E0;
}

.ucenter-username {
    padding-right: 220rpx;
    font-weight: bold;
}

.user-update-tag {
    font-size: 30rpx;
    margin-left: 12rpx;
    width: 78rpx;
    height: 30rpx;
}

.ucenter-usernum text {
    color: #FFFFFF;
}

.ucenter-integralbox {
    width: 100%;
    height: 140rpx;
    padding: 0 27rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.ucenter-integral-item {
    position: relative;
    font-weight: bold;
    line-height: 50rpx;
    height: 100%;
}

.ucenter-integral-item text:nth-child(1) {
    color: #FFFFFF;
    font-size: 32rpx;
    display: block;
}

.ucenter-integral-item text:nth-child(2) {
    color: #FFFFFF;
    font-size: 30rpx;
    display: block;
}

.ucenter-nouserinfo {
    padding-left: 160rpx;
}

.ucenter-nouserinfo image {
    position: absolute;
    width: 100rpx;
    height: 100rpx;
    left: 30rpx;
    top: 40rpx;
}

.ucenter-nouserinfo text {
    position: relative;
    display: block;
    line-height: 175rpx;
    letter-spacing: 2px;
    font-size: 30rpx;
    font-weight: bold;
}

.ucenter-nouserinfo-tips {
    border-top: 1px dashed #dcdcdc;
    padding: 20rpx;
    font-size: 26rpx;
    line-height: 50rpx;
    color: #666;
}

.ucenter-menus-box {
    position: relative;
    width: 100%;
    padding: 0 27rpx;
}

.ucenter-hasnoticeinfo {
    margin-bottom: 15rpx;
    border-radius: 5px;
    box-shadow: #e7e6e4 0 0 10rpx;
    overflow: hidden;
    background-color: #fff;
}

.ucenter-pad {
    padding: 30rpx 0;
}

.ucenter-100 {
    width: 100%;
}

.ucenter-float25 {
    width: 25%;
    float: left;
    height: 150rpx;
    padding: 10rpx;
}

.ucenter-float25 image {
    display: block;
    width: 80rpx;
    height: 80rpx;
    margin: 10rpx auto;
}

.ucenter-float25 text {
    font-size: 26rpx;
    margin: 10rpx 0;
    display: block;
    text-align: center;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    color: #666666;
}

.ucenter-floatBox {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    flex-wrap: wrap;
}

.ucenter-float33 {
    width: 31%;
    float: left;
    padding: 40rpx 0 60rpx;
    border: 2rpx solid rgba(210, 210, 210, 1);
    margin-bottom: 30rpx;
    position: relative;
    background-color: #FFFFFF;
    border-radius: 20rpx;
}

.wechatIcon {
    width: 30rpx;
    height: 30rpx;
    padding-right: 10rpx;
}

.ucenter-float33 text {
    /* margin: 10rpx 0; */
    display: block;
    text-align: center;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.ucenter-month {
    font-weight: 400;
    color: #333333;
}

.ucenter-price {
    font-size: 30rpx;
    font-weight: 400;
    color: rgba(108, 108, 110, 1);
    display: flex;
    align-items: flex-end;
    justify-content: center;
}

.ucenter-price text:nth-child(1) {
    font-size: 25rpx;
    display: block;
    margin-right: 5rpx;
}

.ucenter-price text:nth-child(2) {
    font-size: 50rpx;
    font-weight: 400;
    margin: 0;
    display: inline-block;
}


/* 切换会员状态 */

.common-choose-header {
    margin: 20rpx 80rpx 20rpx;
    display: flex;
    background: #ECEDF1;
    box-shadow: 0px 5px 8px 0px rgba(208, 209, 212, 0.31);
    border-radius: 50rpx;
    font-size: 28rpx;
}

.choose-header-item {
    text-align: center;
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    color: #706F6F;
}

.member-active {
    background: rgba(0, 153, 255, 1);
    box-shadow: 0px 2px 6px 0px rgba(0, 153, 255, 0.31);
    color: #FFFFFF !important;
    border-radius: 50rpx;
}


/* 切换end */

.memberPay-active {
    border: 3rpx solid rgba(0, 153, 255, 1);
}

.memberPay-active .ucenter-price {
    color: rgba(0, 153, 255, 1);
}

.memberPay-active .payTypes {
    background-color: rgba(0, 153, 255, 1);
}

.tuijian {
    position: absolute;
    top: 0;
    right: 0;
    background: linear-gradient(270deg, rgba(253, 55, 62, 1) 0%, rgba(254, 104, 87, 1) 100%);
    color: rgba(255, 255, 255, 1);
    font-size: 20rpx;
    text-align: center;
    padding: 1rpx 10rpx;
    border-bottom-left-radius: 12rpx;
    border-top-right-radius: 12rpx;
}

.payTypes {
    background: rgba(210, 210, 210, 1);
    border-radius: 50rpx;
    font-size: 25rpx;
    color: #fff;
    width: 80%;
    padding: 3rpx 10rpx 5rpx;
    margin: 20rpx auto 0;
}

.payTypes text {
    margin: 0;
}

.radioIcon {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 50rpx;
    height: 50rpx;
}