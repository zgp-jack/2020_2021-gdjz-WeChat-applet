/* pages/ucenter/ucenterNew/invite.wxss */

@import '../../integral/expend/expend.wxss';
.ucener-header {
    position: relative;
    width: 100%;
    height: 380rpx;
    background: url("http://cdn.yupao.com/miniprogram/images/new-ucenter.png") no-repeat;
    background-size: 100% 100%;
}

.ucenter-title {
    position: relative;
    width: 100%;
    text-align: center;
    display: block;
    line-height: 110rpx;
    font-size: 34rpx;
    color: white;
}

.ucener-userinfo-wrap {
    width: 100%;
    position: absolute;
    height: 315rpx;
    left: 0;
    top: 110rpx;
    padding: 0 27rpx;
}

.ucenter-userinfo {
    position: relative;
    width: 100%;
    height: 100%;
    display: block;
    background: white;
    border-radius: 5px;
    box-shadow: #e7e6e4 0 0 10rpx;
}

.ucenter-userinfo-box {
    position: relative;
    width: 100%;
    padding: 0 0 0 27rpx;
    height: 175rpx;
}

.ucenter-userimg {
    position: absolute;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    top: 25rpx;
    left: 27rpx;
}

.ucenter-userinfo-words {
    position: relative;
    width: 100%;
    height: 175rpx;
    font-size: 30rpx;
    color: #1c1c1c;
    line-height: 50rpx;
    font-weight: bold;
    padding: 40rpx 0 10rpx 140rpx;
    border-bottom: 1rpx solid #E0E0E0;
}

.ucenter-username {
    padding-right: 220rpx;
}

.user-update-tag {
    font-size: 30rpx;
    margin-left: 12rpx;
    width: 78rpx;
    height: 30rpx;
}

.user-update-info {
    position: absolute;
    right: 0;
    bottom: 36%;
    font-size: 24rpx;
    padding: 0 10rpx;
    font-weight: normal;
    height: 42rpx;
    line-height: 42rpx;
    background: linear-gradient(90deg, rgba(70, 146, 246, 1), rgba(71, 172, 249, 1));
    box-shadow: 0px 2px 2px 0px rgba(105, 146, 238, 0.5);
    border-bottom-left-radius: 15px;
    border-top-left-radius: 15px;
    color: #FFFFFF;
}

.ucenter-usernum text {
    color: #0099ff;
}

.ucenter-nouserinfo {
    padding-left: 160rpx;
}

.ucenter-nouserinfo image {
    position: absolute;
    width: 100rpx;
    height: 100rpx;
    left: 30rpx;
    top: 40rpx;
}

.ucenter-nouserinfo text {
    position: relative;
    display: block;
    line-height: 175rpx;
    letter-spacing: 2px;
    font-size: 30rpx;
    font-weight: bold;
}

.ucenter-nouserinfo-tips {
    border-top: 1px dashed #dcdcdc;
    padding: 20rpx;
    font-size: 26rpx;
    line-height: 50rpx;
    color: #666;
}

.ucenter-integralbox {
    width: 100%;
    height: 140rpx;
    padding: 0 27rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.ucenter-integral-item {
    position: relative;
    font-weight: bold;
    line-height: 50rpx;
    height: 100%;
}

.ucenter-integral-item text:nth-child(1) {
    color: #069bfe;
    font-size: 32rpx;
    display: block;
}

.ucenter-integral-item text:nth-child(2) {
    color: #666564;
    font-size: 30rpx;
    display: block;
}


/* 邀请列表 */

.integral-content {
    position: relative;
    width: 100%;
    padding: 50rpx 27rpx 0 87rpx;
}

.integral-list-item {
    position: relative;
    width: 100%;
    height: 200rpx;
    background: white;
    border-radius: 5rpx;
    margin-top: 15rpx;
    box-shadow: #e7e6e4 0 0 10rpx;
}

.integral-list-time {
    position: absolute;
    width: 120rpx;
    height: 120rpx;
    background: #0099ff;
    left: -60rpx;
    top: 40rpx;
    border-radius: 2px;
    padding: 10rpx 0;
}

.integral-list-time text {
    position: relative;
    display: block;
    text-align: center;
    line-height: 50rpx;
}

.integral-list-time text:nth-child(1) {
    color: white;
    font-size: 26rpx;
}

.integral-list-time text:nth-child(2) {
    color: white;
    font-size: 34rpx;
}

.integral-list-words {
    position: relative;
    padding: 10rpx 27rpx 10rpx 80rpx;
    width: 100%;
    height: 200rpx;
}

.integral-list-words view {
    position: relative;
    display: block;
    line-height: 60rpx;
    color: #333;
}

.integral-list-words .integral-list-title {
    font-size: 32rpx;
}

.integral-list-words .integral-list-info {
    font-size: 30rpx;
}

.integral-list-lasttime {
    font-size: 30rpx;
}

.integral-list-lasttime text {
    float: right;
    font-size: 30rpx;
    color: #fd4040;
}