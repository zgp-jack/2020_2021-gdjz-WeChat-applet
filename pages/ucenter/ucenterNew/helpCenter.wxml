<!--pages/ucenter/ucenterNew/helpCenter.wxml-->
<view class='list_box'>
    <view class='listItem' wx:for='{{HelpeLists}}' wx:key='this' wx:for-item='parentItem' wx:for-index='parentIndex'>
        <view class='list_name_box' catchtap='listTap' data-parentindex='{{parentIndex}}'>
            <view class='list_item_title'>
                <image src='{{ question }}' class='icon_question'></image>
                <text class='list_item_name'>{{parentItem.question}}</text>
                <image src='{{ rightarrow }}' class='icon_down {{parentItem.show&&"icon_down_rotate"}}'></image>
            </view>
            <view class='list_item_box' wx:if='{{parentItem.show}}'>
                <view class='other_box'>
                    <view class='other'>{{parentItem.answer}}</view>
                </view>
            </view>
        </view>
    </view>
</view>