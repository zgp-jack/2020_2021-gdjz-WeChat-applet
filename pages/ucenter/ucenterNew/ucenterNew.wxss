.ucener-theme {
    display: flex;
    align-items: center;
    padding: 0 27rpx;
}

.ucener-leftImage {
    width: 50rpx;
    height: 50rpx;
    padding: 32rpx 20rpx 30rpx 0
}

.ucener-border-b {
    display: flex;
    align-items: center;
    width: 100%;
    justify-content: space-between;
    padding: 30rpx 0;
}

.ucener-border {
    border-bottom: 1rpx solid #cccccc;
}

.ucener-title {
    position: relative;
    font-size: 32rpx;
    color: #282A34;
    font-weight: bold;
}

.ucener-title text {
    width: 16rpx;
    height: 16rpx;
    background: rgba(253, 6, 24, 1);
    border-radius: 50%;
    position: absolute;
    top: 0;
    right: -20rpx;
}

.ucener-detil {
    font-size: 26rpx;
    font-weight: bold;
    color: rgba(180, 178, 178, 1);
}

.ucener-rightIcon {
    padding-left: 20rpx;
    width: 50rpx;
    height: 50rpx;
}