/* pages/ucenter/ucenterNew/helpCenter.wxss */

.list_box {
    margin-top: 20rpx;
}

.listItem {
    background-color: #fff;
}

.list_name_box {
    background: #fff;
    border-bottom: 1px solid #efefef;
    padding: 0 25rpx;
    font-size: 32rpx;
}

.list_item_name {
    font-size: 28rpx;
    font-weight: 400;
    display: inline-block;
    padding: 0 20rpx 0 50rpx;
}

.icon_down {
    width: 15rpx;
    height: 20rpx;
    transition: transform 0.3s;
    position: absolute;
    top: 30rpx;
    right: 0;
}

.list_item_box {
    display: flex;
}

.list_item_title {
    width: 100%;
    min-height: 90rpx;
    color: #333333;
    position: relative;
    padding: 20rpx 0;
}

.other {
    display: flex;
    padding: 0 25rpx 30rpx 60rpx;
    align-items: center;
    font-size: 30rpx;
    color: #999999;
}

.icon_down_rotate {
    transform: rotate(-90deg);
}

.icon_question {
    width: 45rpx;
    height: 48rpx;
    padding-right: 20rpx;
    position: absolute;
    left: 0;
}
.goyi{
    position: fixed;
    bottom: 0;
    width: 98%;
    background: #0099ff;
    color: #fff;
    text-align: center;
    margin: 1%;
    height: 90rpx;
    line-height: 90rpx;
    box-shadow: 0px 0px 0px 5px #fff;
}