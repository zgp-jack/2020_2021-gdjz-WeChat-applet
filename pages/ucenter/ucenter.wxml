<import src="/pages/footer/footer.wxml" />

<view class="ucener-header">
  <text class='ucenter-title'>会员中心</text>

  <view class='ucener-userinfo-wrap' wx:if="{{ userInfo }}">
    <view class='ucenter-userinfo'>
      <view class='ucenter-userinfo-box'>
        <image src='{{ member.headimgurl }}' class='ucenter-userimg'></image>
        <view class='ucenter-userinfo-words'>
          <navigator class='user-update-info' url='/pages/userinfo/index/index?img={{ member.headimgurl }}&auth={{ member.is_check }}&tel={{ member.tel }}&name={{ member.username || member.nickname }}&pass={{ member.pwd_status }}' open-type="navigate" wx:if="{{ member.tel }}">修改资料</navigator>
          <navigator class='user-update-info' url='/pages/userinfo/edit/edit' open-type="navigate" wx:else="{{ member.tel }}">完善资料</navigator>
          <view class='ucenter-username overwords'>{{ member.username || member.nickname }}</view>
          <view class='ucenter-usernum overwords'>会员编号：
            <text>{{ member.id }}</text> </view>
        </view>
      </view>
      <view class='ucenter-integralbox flex-row'>
        <navigator class='ucenter-integral-item flex-column' url='/pages/integral/return/return' open-type="navigate" wx:if="{{ showReturnIntegral }}">
          <text>{{ member.return_integral }}</text>
          <text>积分返回记录</text>
        </navigator>
        <navigator class='ucenter-integral-item flex-column' url='/pages/integral/official/official' open-type="navigate">
          <text class='overwords'>{{ member.integral }}</text>
          <text>积分</text>
        </navigator>
        <navigator class='ucenter-integral-item flex-column {{ member.temporary_integral != "0" ? "click-red-point" : "" }}' url='/pages/integral/temp/temp' open-type="navigate">
          <text>{{ member.temporary_integral }}</text>
          <text>临时积分</text>
        </navigator>
      </view>
    </view>
  </view>



  <view class='ucener-userinfo-wrap' wx:if="{{ !userInfo }}">
    <view class='ucenter-userinfo'>
      <view class='ucenter-userinfo-box ucenter-nouserinfo' bindtap='gotoUserauth'>
        <image src='{{ nouser }}'></image>
        <text>登录/注册</text>
      </view>
      <view class='ucenter-integralbox ucenter-nouserinfo-tips'>
        点击上方登录/注册按钮可以前往登录页面，登录成功后可解锁小程序全部功能，方便您能更便捷的招工找活。
      </view>
    </view>
  </view>


</view>

<view class='yupao-common-container'>

  <view class='ucenter-menus-box'>
    <!-- 新信息提示     -->
    <view class="ucenter-hasnoticeinfo" wx:if="{{ member.has_notice_msg.hasNoticeMsg }}" data-url='../others/message/lists/lists?tel={{ (member.tel == null) ? "" : member.tel }}&name={{ member.username || member.nickname }}' bindtap='downappfun'>
      <view class='feedbackmsg'>
        <image class='feedbackmsg-img' src='{{ feedbackimg }}'></image>
        <view class="overwords">
          <text>[{{ member.has_notice_msg.infoTypeWord }}]</text>{{ member.has_notice_msg.tipsMsg }}</view>
        <text class="feedback-btn">点击查看</text>
      </view>
    </view>


    <view class='ucenter-menus clearfix'>
      <view class='ucenter-menu-item' data-url='../published/published?type=0' bindtap='valiUserUrl'>
        <image src='{{ ucenterimgs.published }}'></image>
        <text>已发布信息</text>
      </view>

      <!-- <block wx:if="{{ (member.resume_status.has_resume == '0') }}">
        <view class='ucenter-menu-item' data-url="/pages/publish/card/card" bindtap='valiUserUrl'>
          <image src='{{ ucenterimgs.card }}'></image>
          <text>发布找活名片</text>
          <text class="ucenter-badge">{{ member.resume_status.resume_tips_string }}</text>
        </view>
      </block> -->

    <block wx:if="{{ (member.resume_status.has_resume == '0') }}">
        <view class='ucenter-menu-item' data-url="/pages/publish/card/card" bindtap='releaselive'>
          <image src='{{ ucenterimgs.card }}'></image>
          <text>发布找活名片</text>
          <text class="ucenter-badge">{{ member.resume_status.resume_tips_string }}</text>
        </view>
      </block>



      <block wx:if="{{ (member.resume_status.has_resume == '1') }}">
        <view class='ucenter-menu-item' data-url='{{ (member.resume_status.check_status == "0") ? "/pages/publish/card/card?id=" + member.resume_status.resume_id : "/pages/mycard/mycard" }}' bindtap='valiUserUrl'>
          <image src='{{ ucenterimgs.card }}'></image>
          <text>我的找活名片</text>
          <text class="ucenter-badge" wx:if="{{ member.resume_status.check_status != '2' }}">{{ member.resume_status.resume_tips_string }}</text>
        </view>
      </block>



      <view class='ucenter-menu-item' data-url='../published/published?type=1' bindtap='valiUserUrl'>
        <image src='{{ ucenterimgs.used }}'></image>
        <text>已发布交易</text>
      </view>
      <view class='ucenter-menu-item' data-url='../getintegral/getintegral' bindtap='valiUserUrl'>
        <image src='{{ ucenterimgs.recharge }}'></image>
        <text>获取积分</text>
      </view>
      <view class='ucenter-menu-item' data-url='../integral/expend/expend' bindtap='valiUserUrl'>
        <image src='{{ ucenterimgs.expend }}'></image>
        <text>积分消耗记录</text>
      </view>
      <view class='ucenter-menu-item' data-url='../integral/source/source' bindtap='valiUserUrl'>
        <image src='{{ ucenterimgs.original }}'></image>
        <text>积分来源</text>
      </view>
      <view class='ucenter-menu-item' data-url='../static/invite' bindtap='valiUserUrl'>
        <image src='{{ ucenterimgs.invite }}'></image>
        <text>邀请工友</text>
      </view>

      <view class='ucenter-menu-item' data-url='../collect/collect' bindtap='valiUserUrl'>
        <image src='{{ ucenterimgs.collect }}'></image>
        <text>我的收藏</text>
      </view>

      <view class='ucenter-menu-item' wx:if="{{ showFastIssue.show > 0 }}" data-url='../fast-issue/index/index' bindtap='valiUserUrl'>
        <image src='{{ ucenterimgs.fastissue }}'></image>
        <text>快速发布</text>
      </view>
      <view class='ucenter-menu-item' wx:if="{{ showFastIssue.show > 0 }}" data-url='../fast-issue/lists/lists' bindtap='valiUserUrl'>
        <image src='{{ ucenterimgs.fastlist }}'></image>
        <text>快速发布列表</text>
      </view>
      <view class='ucenter-menu-item' data-url='../realname/realname' bindtap='valiUserUrl'>
        <image src='{{ ucenterimgs.realname }}'></image>
        <text>实名认证</text>
      </view>
      <view class='ucenter-menu-item' data-url='/pages/others/message/lists/lists?tel={{ (member.tel == null) ? "" : member.tel }}&name={{ member.username || member.nickname }}' bindtap='valiUserUrl'>
        <image src='{{ ucenterimgs.feedback }}'></image>
        <text>给我们建议</text>
        <text class="ucenter-badge" wx:if="{{ member.has_notice_msg.hasNoticeMsg }}">新消息</text>
      </view>
      <view class='ucenter-menu-item' data-url='../download/download-app' bindtap='downappfun'>
        <image src='{{ ucenterimgs.downapp }}'></image>
        <text>下载APP</text>
      </view>

      <view class='ucenter-menu-item' wx:if="{{ !showFastIssue.show }}"></view>

      <view class='ucenter-menu-item' wx:if="{{ showFastIssue.show }}"></view>

      <view class='ucenter-menu-item' wx:if="{{ showFastIssue.show }}"></view>


    </view>
  </view>
</view>



<!-- 引入footer -->
<template is="footer" data="{{ footerImgs,publishActive,showPublishBox,footerActive }}" />