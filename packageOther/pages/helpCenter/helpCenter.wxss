/* pages/ucenter/ucenterNew/helpCenter.wxss */

page{
    height: 100%;
    width: 100%;
    position: relative;
}
.help_center_head{
    width: 100%;
    height: 130rpx;
    display: flex;
    justify-content: center;
    align-items: flex-end;
}
.help_center_search{
    width: 90%;
    height: 90rpx;
    border-radius: 5rpx;
    display: flex;
    align-items: center;
    background-color: #ffff;
    box-shadow: 1rpx 2rpx 7rpx 0rpx rgba(177, 177, 177, 0.31);
}
.help_search_icon{
    padding: 5rpx 10rpx;
    width: 60rpx;
    height: 60rpx;
}
.help_search_input{
    flex: 1;
    height: 100%;
    padding-left: 5rpx;
    font-size: 30rpx;
}

.help_search_list{
    width: 100%;
    display: flex;
    justify-content: center;
    position: absolute;
    margin-top: 10rpx;
    z-index: 100;
}
.help_search_content{
    width: 90%;
    border-radius: 6rpx;
    background-color: #ffff;
    box-shadow: 1rpx 2rpx 7rpx 0rpx rgba(177, 177, 177, 0.31);
}
.help_search_item{
    width: 100%;
    height: 80rpx;
    border-bottom: 1rpx solid #F4F4F4;
    display: flex;
    align-items: center;
    padding-left: 30rpx;
    font-size: 28rpx;
}

.help_list_scroll{
    height: calc(100vh - 440rpx);
    width: 100%;
}
.help_list_title{
    width: 100%;
    height: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.help_list_title view{
    width: 90%;
    height: 70rpx;
    display: flex;
    align-items: center;
    font-size: 35rpx;
    font-weight: 500;
    color: #303030;
}
.help_list_body{
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.help_list_item{
    width: 90%;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.help_list_question{
    display: flex;
    align-items: center;
    border-bottom: 1px solid #EEEEEE;
    height: 100rpx;
    width: 100%;
}
.help_question_icon{
    width: 45rpx;
    height: 45rpx;
    margin-right: 15rpx;
    border-radius: 4rpx;
}
.help_question_icon image{
    width: 100%;
    height:100%;
}
.help_question_content{
    margin-right: auto;
    font-size: 32rpx;
    font-weight: 400;
    color: #363636;
}
.help_question_arrow{
    height: 25rpx;
    width: 15rpx;
}
.icon_down_rotate{
    transform: rotate(90deg);
}

.help_question_detail{
    width: 100%;
    display: flex;
    align-items: center;
    flex-direction: column;
    font-size: 30rpx;
}
.help_question_item {
    display: flex;
    align-items: center;
    height: 100rpx;
    width: 100%;
}
.help_center_footer{
    height: 200rpx;
    width: 100%;
    position: absolute;
    bottom: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

}
.help_center_suggestions{
    width: 80%;
    background-color: #0099FF;
    border-radius: 5rpx;
    height: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #ffff;
}
.help_my_suggestions{
    width: 80%;
    height: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #0099FF;
}

