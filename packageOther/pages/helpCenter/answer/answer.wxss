/* packageOther/pages/helpCenter/answer/answer.wxss */
@import "/wxParse/wxParse.wxss";
page{
  background-color: white;
}
.noticebox{
  position: relative;
  padding: 0rpx 40rpx;
  box-sizing: border-box;
  max-width: 100%;
  height: 100vh;
}
.infotitle{
  line-height:80rpx;
  padding: 30rpx 0;
  font-size: 40rpx;
  font-weight: bold;
  color: #474747;
}
.answer_scroll{
  width: 100%;
  line-height: 50rpx;
}
.answer_footer{
  display: flex;
  width: 100%;
  height: 320rpx;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
}
.answer_result{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  width: 80%;
  background: rgba(219, 219, 219, 0);
  border: 1px solid #E4E2E2;
  border-radius: 4px;
  font-weight: 400;
  color: #474747;
}
.answer_scroll image{
  margin-top: 20rpx;
  margin-left: 50%;
  transform: translateX(-50%);
  border-radius: 20rpx;
}