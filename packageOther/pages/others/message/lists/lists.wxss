@import "../../../../../pages/userauth/userauth.wxss";
@import "../../../../../utils/phone.wxss";
@import "../../../../../pages/index/index.wxss";
page {
    position: relative;
    width: 100%;
    height: 100%;
    background: white;
}
.yupao-lists-tips{
    border-bottom: 1rpx solid #f0f0f0;
    padding-bottom: 20rpx;
    color: #bcbcbc;
}

.feedback-header {
    position: relative;
    width: 100%;
    background: #fff;
    padding: 30rpx;
    display: flex;
    font-size: 28rpx;
    color: #545454;


}
.feedback-header view{
    line-height: 50rpx;
}

.feedback-header-texr {
    color: #f86e09;
    font-size: 28rpx;
}

.footr {
    position: fixed;
    left: 0;
    bottom: 0;
    background: rgba(255, 255, 255, 1);
    width: 100%;
    padding: 25rpx 20rpx;
}

.footr-1 {
    width: 100%;
    height: 80rpx;
    background: #0099ff;
    border-radius: 6rpx;
    color: white;
    margin: 0 auto;
    line-height: 80rpx;
    text-align: center;
    font-size: 30rpx;
}

/* 增加样式 */

.help_list_scroll{
    height: calc(100vh - 130rpx);
    width: 100%;
}
.help_list_body{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.help_list_item{
    width: 90%;
    display: flex;
    flex-direction: row;
    align-items: center;
    border-bottom: 1rpx solid #f0f0f0 ;
}
.help_question_content{
    height: 130rpx;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    margin-right: auto;
}
.help_question_content>view:nth-child(1){
    color: #bcbcbc;
    font-size: 28rpx;
}
.help_question_content>view:nth-child(2){
    width: 100%;
    display: flex;
    justify-content: center;
}
.help_question_content>view:nth-child(2)>view{
    width: 50%;
    white-space:nowrap;
    text-overflow:ellipsis;
    overflow: hidden;
    font-size: 30rpx;
    font-weight: 500;
    margin-right: auto;
}

.help_question_arrow{
    height: 25rpx;
    width: 15rpx;
}