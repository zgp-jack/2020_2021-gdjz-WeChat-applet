.avatar {
  width: 100rpx;
  height: 100rpx;
  position: relative;
  padding-right: 30rpx;
}

.avatar .img {
  width: 100%;
  height: 100%;
}

.avatar .doyen {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: -2px;
  right: 20rpx;
}

.expertInfo {
  font-size: 12px;
  flex-grow: 2;
  color: #b0b0b0;
  line-height: 1.5em;
}

.expertInfo .name {
  font-size: 16px;
  margin-bottom: 6px;
}

.askBtn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 14px;
  border-radius: 60rpx;
  border: 1px solid #4675f9;
  color: #4675f9;
}

.scoll-h {
  height: 100%;
  background: white;
}

.bagboxs {
  width: 100%;
  height: 20rpx;
  background: #f5f5f5;
  position: sticky;
  top: 110rpx;
  z-index: 100;
}

.contentlist {
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
}

.contentlistimg {
  width: 160rpx;
  height: 160rpx;
}

.contentlistimg image {
  width: 100%;
  height: 100%;
  border-radius: 6rpx;
}

.contentlisyupao {
  padding-left: 30rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.contentyupaotext {
  width: 520rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 32rpx;
  letter-spacing: 3rpx;
}

.contentyupaocone {
  width: 520rpx;
  color: #969194;
  font-size: 28rpx;
  letter-spacing: 3rpx;
  line-height: 35rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.yupaowriter {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  color: #9a9999;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.addeas {
  position: fixed;
  z-index: 200;
  top: 20%;
}
