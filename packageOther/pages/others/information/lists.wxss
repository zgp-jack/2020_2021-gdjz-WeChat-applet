page {
  position: relative;
  width: 100%;
  height: 100%;
}

.tab-h {
  height: 110rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 110rpx;
  background: white;
  font-size: 16px;
  white-space: nowrap;
  position: sticky;
  top: 0;
  left: 0;
  z-index: 99;
}

.tab-item {
  width: 120rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  margin: 0 26rpx;
  display: inline-block;
  color: black;
  /* background: #f5f5f5; */
  font-size: 26rpx;
}

.tab-item.active {
  color: white;
  position: relative;
  background: #0975f3;
  font-size: 26rpx;
  border-radius: 6rpx;
}

