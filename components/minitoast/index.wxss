.common-toast-container{
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 999999;
  left: 0;
  top: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.common-toast-box{
  position: relative;
  display: block;
  max-width: 80%;
  padding: 15rpx 50rpx;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  line-height: 45rpx;
  border-radius: 5rpx;
  font-size: 26rpx;
  text-align: center;
  box-sizing: border-box;
}