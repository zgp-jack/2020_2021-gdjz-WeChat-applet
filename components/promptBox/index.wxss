/* components/promptBox/index.wxss */
.prompt-container{
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.3);
  left: 0;
  top: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  z-index: 99999;
}
.margin{
  margin-top: 40rpx;
}

.prompt-content{
  padding:0rpx 50rpx;
  margin-top: 22rpx;
  margin-bottom: 150rpx;
}

.prompt-box{
  position: relative;
  width: 80%;
  background-color: white;
  border-radius: 30rpx;
  overflow: initial;
  min-height: 370rpx;
}
.prompt-title{
  position: relative;
  /* line-height: 80rpx; */
  font-size: 35rpx;
  text-align: center;
  padding-top: 52rpx;
  font-weight: bold;
  padding-bottom: 10rpx;
}
.prompt-title image{
  width: 80rpx;
  height: 80rpx;
}
.prompt-body{
  position: relative;
  line-height: 50rpx;
  font-size: 32rpx;
  text-align: center;
  color: #868686;
}
.prompt-box .pulish-active{
  line-height: 50rpx;
}

.prompt-footer{
  position: absolute;
  border-top: 1rpx solid #eeeeee;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-bottom-right-radius: 30rpx;   
  border-bottom-left-radius: 30rpx;
  overflow: hidden;
  width: 100%;
  bottom: 0rpx;
}
.prompt-btn{
  font-size: 35rpx;
  flex: 1;
  border-right: 1rpx solid #eeeeee;
  color: #888;
  background: white;
  border-radius: 0;
  line-height: 110rpx;
  font-weight: 600;
}
.prompt-btn::after{
  border: 0;
}
.prompt-btn:nth-last-child(1){
  border-right: 0;
  color: #0099ff;
}
.prompt-close{
  position: absolute;
  bottom: -100rpx;
  width: 50rpx;
  height: 50rpx;
  left: 50%;
  margin-left: -25rpx;
  border-radius: 50%;
}